---
import Layout from '../../../layouts/Layout.astro';
import { iconMap } from '../../../icons/iconMap';

// Export getStaticPaths for static generation
export async function getStaticPaths() {
  const apiBase = import.meta.env.WORDPRESS_API_URL;

  try {
    const res = await fetch(`${apiBase}/job_openings?lang=pt&per_page=100`);
    if (!res.ok) return [];

    const jobs = await res.json();

    return jobs.map((job: any) => ({
      params: { slug: job.slug },
    }));
  } catch (error) {
    console.error('Error fetching jobs for paths:', error);
    return [];
  }
}

const { slug } = Astro.params;
const apiBase = import.meta.env.WORDPRESS_API_URL;

// Fetch the job
const res = await fetch(`${apiBase}/job_openings?slug=${slug}&lang=pt&_embed`);
const jobs = await res.json();

if (!jobs || jobs.length === 0) {
  return Astro.redirect('/carreiras/vagas-emprego');
}

const job = jobs[0];

function decodeHtml(str: string) {
  if (!str) return '';
  return str
    .replace(/&#(\d+);/g, (_, code) => String.fromCharCode(code))
    .replace(/&amp;/g, '&')
    .replace(/&quot;/g, '"')
    .replace(/&apos;/g, "'")
    .replace(/&lt;/g, '<')
    .replace(/&gt;/g, '>');
}

const title = decodeHtml(job.title.rendered);
const acf = job.acf || {};

const department = acf.job_department || 'Geral';
const workModelRaw = acf.job_work_model || 'Presencial';
const workModels = Array.isArray(workModelRaw) ? workModelRaw : [workModelRaw];
const location = acf.job_location || 'Portugal';
const description = acf.job_description || '';
const requirements = acf.job_requirements || '';

// Work model badge classes
const workModelClasses: Record<string, string> = {
  'Remoto': 'badge-remoto',
  'Híbrido': 'badge-hibrido',
  'Presencial': 'badge-presencial',
};
