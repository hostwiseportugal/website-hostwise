            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Voltar às Vagas
        </a>

        <div class="job-header">
          <h1 class="job-title">{title}</h1>

          <div class="job-badges">
            <span class="badge badge-department">
              <span class="badge-icon" set:html={iconMap.briefcase} />
              {department}
            </span>
            {workModels.map((model) => (
              <span class={`badge ${workModelClasses[model] || 'badge-presencial'}`}>
                {model}
              </span>
            ))}
            <span class="badge badge-location">
              <span class="badge-icon" set:html={iconMap.location} />
              {location}
            </span>
          </div>

          <a href="#candidatura" class="btn-apply">
            Candidatar-me
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" width="20" height="20">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Description Section -->
    {description && (
      <section class="job-description-section">
        <div class="container">
          <div class="section-header">
            <h2>Sobre a Função</h2>
          </div>
          <div class="prose" set:html={description}></div>
        </div>
      </section>
    )}

    <!-- Requirements Section -->
    {requirements && (
      <section class="job-requirements-section">
        <div class="container">
          <div class="requirements-card">
            <div class="section-header">
              <h2>Requisitos</h2>
            </div>
            <div class="requirements-content prose" set:html={requirements}></div>
          </div>
        </div>
      </section>
    )}

    <!-- Application Form Section -->
    <section class="job-application-section" id="candidatura">
