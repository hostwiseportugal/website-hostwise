---
import Layout from '../../layouts/Layout.astro';
import { iconMap } from '../../icons/iconMap';

const advantages = [
  {
    icon: iconMap.euro,
    title: "Easy, Effortless Earnings",
    description: "By recommending our services, you can earn a financial reward without doing anything else."
  },
  {
    icon: iconMap.chartLine,
    title: "Scalable Commission",
    description: "The base reward starts at €150 for a studio/1-bedroom, but increases depending on the number of bedrooms or the number of units referred."
  },
  {
    icon: iconMap.userVerify,
    title: "Help Friends Monetise Their Properties",
    description: "By referring someone, you're helping them turn their property into passive income."
  }
];

const commissionTable = [
  { type: "Studio/1-Bed", reward: "€150" },
  { type: "2-Bed", reward: "€250" },
  { type: "3-Bed", reward: "€350" },
  { type: "4-Bed+", reward: "€450" }
];

const earningsExamples = [
  {
    amount: "€1,200",
    name: "Carla P.",
    role: "Host Wise Property Owner"
  },
  {
    amount: "€600",
    name: "André C.",
    role: "Estate Agent"
  },
  {
    amount: "€400",
    name: "Tiago F.",
    role: "Accountant"
  }
];

const alternates = [
  {
    hreflang: "pt-PT",
    href: "https://www.hostwise.pt/referrals",
  },
  {
    hreflang: "en",
    href: "https://www.hostwise.pt/en/referrals",
  },
  {
    hreflang: "x-default",
    href: "https://www.hostwise.pt/referrals",
  },
];
---

<Layout title="Referral Programme"
description='Discover the Host Wise referral programme and earn by recommending property owners interested in vacation rental management.'
alternates={alternates}>
  <!-- Hero Section -->
  <section class="referrals-hero">
    <div class="hero-background">
      <div class="gradient-orb gradient-orb-1"></div>
      <div class="gradient-orb gradient-orb-2"></div>
    </div>

    <div class="container">
      <div class="hero-content">
        <div class="hero-badge">
          <span>Host Wise Referrals</span>
        </div>

        <h1 class="hero-heading">Earn Extra Money with Host Wise</h1>

        <p class="hero-description">
          Recommend our services and earn rewards for every successful referral.
          Turn your network into extra income.
        </p>

        <div class="hero-cta">
          <a href="#advantages" class="btn-hero-primary">
            Learn More
            <div class="btn-icon" set:html={iconMap.arrowRight} />
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Advantages Section -->
  <section class="advantages-section" id="advantages">
    <div class="container">
      <div class="section-header">
        <h2>Advantages of Recommending Host Wise</h2>
        <p>Discover why our referral programme is perfect for you</p>
      </div>

      <div class="advantages-grid">
        {advantages.map((advantage, index) => (
          <div class="advantage-card" data-index={index}>
            <div class="advantage-icon" set:html={advantage.icon} />
            <h3>{advantage.title}</h3>
            <p>{advantage.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Commission Table Section -->
  <section class="commission-section">
    <div class="container">
      <div class="section-header">
        <h2>Commission Table</h2>
        <p>
          At Host Wise, we value those who help us grow. If you know someone who owns
          a flat or a house with vacation rental potential, you can earn an attractive commission
          by recommending our services.
        </p>
      </div>

      <div class="commission-table-wrapper">
        <table class="commission-table">
          <thead>
            <tr>
              <th>Property Type</th>
              <th>Reward</th>
            </tr>
          </thead>
          <tbody>
            {commissionTable.map((item, index) => (
              <tr data-index={index}>
                <td class="type-cell">{item.type}</td>
                <td class="reward-cell">{item.reward}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- No Limit Section -->
  <section class="no-limit-section">
    <div class="container">
      <div class="section-header">
        <h2>There's No Limit to Your Referrals</h2>
        <p>
          With Host Wise, your referrals are always rewarded. There is no cap
          on your earnings, so every time you recommend us, you always earn.
        </p>
      </div>

      <div class="earnings-grid">
        {earningsExamples.map((example, index) => (
          <div class="earnings-card" data-index={index}>
            <div class="earnings-amount" data-amount={example.amount}>
              {example.amount}
            </div>
            <p class="earnings-name">{example.name}</p>
            <p class="earnings-role">{example.role}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- How to Refer Section -->
  <section class="how-to-section">
    <div class="container">
      <div class="section-header">
        <h2>How to Refer</h2>
        <p>Follow these simple steps to start earning</p>
      </div>

      <div class="how-to-content">
        <div class="how-to-steps">
          <div class="step-card">
            <div class="step-number">1</div>
            <h3>How does it work?</h3>
            <ul>
              <li>Fill in the form below with your contact details and the contact details of the person you're referring</li>
              <li>You can also send an email to <a href="mailto:comercial@hostwise.pt">comercial@hostwise.pt</a> or call <a href="tel:+351308800428">+351 308 800 428</a></li>
              <li>Share the name, email address and phone number of the person you're recommending and the type of property (flat, house, building, etc.)</li>
            </ul>
          </div>
        </div>

        <div class="form-container">
          <div data-tf-live="01J93KBJ1J1TM1SN5SK1TTTPWF"></div>
          <script src="//embed.typeform.com/next/embed.js" is:inline></script>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .referrals-hero {
    position: relative;
    padding: 200px 20px 120px;
    background: linear-gradient(135deg, var(--blue-light) 0%, rgba(92, 176, 214, 0.05) 100%);
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
  }

  .gradient-orb-1 {
    top: -100px;
    right: -100px;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(92, 176, 214, 0.4) 0%, transparent 70%);
  }

  .gradient-orb-2 {
    bottom: -150px;
    left: -150px;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(12, 68, 99, 0.3) 0%, transparent 70%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-badge {
    display: inline-block;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    padding: 10px 24px;
    border-radius: 30px;
    font-weight: 700;
    font-size: 0.9rem;
    margin-bottom: 32px;
    animation: fadeInDown 0.6s ease-out;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-heading {
    font-size: 4.5rem;
    font-weight: 900;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.1;
    margin-bottom: 32px;
    letter-spacing: -0.02em;
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-description {
    font-size: 1.35rem;
    line-height: 1.7;
    color: var(--text);
    opacity: 0.85;
    margin-bottom: 48px;
    animation: fadeInUp 0.8s ease-out 0.4s backwards;
  }

  .hero-cta {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeInUp 0.8s ease-out 0.6s backwards;
  }

  .btn-hero-primary {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 18px 36px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    border-radius: 12px;
    font-size: 1.15rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 8px 24px rgba(12, 68, 99, 0.25);
  }

  .btn-hero-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 32px rgba(12, 68, 99, 0.35);
  }

  .btn-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
  }

  .btn-icon svg {
    width: 20px;
    height: 20px;
  }

  /* Advantages Section */
  .advantages-section {
    padding: 100px 20px;
    background: white;
  }

  .section-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 60px;
  }

  .section-header h2 {
    font-size: 3rem;
    font-weight: 800;
    color: var(--primary);
    margin-bottom: 16px;
    line-height: 1.2;
  }

  .section-header p {
    font-size: 1.2rem;
    color: var(--text);
    opacity: 0.85;
    line-height: 1.7;
  }

  .advantages-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .advantage-card {
    background: white;
    border: 2px solid var(--gray-light);
    border-radius: 20px;
    padding: 40px 32px;
    text-align: center;
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateY(20px);
    animation: slideInUp 0.6s ease-out forwards;
  }

  .advantage-card[data-index="0"] { animation-delay: 0.1s; }
  .advantage-card[data-index="1"] { animation-delay: 0.2s; }
  .advantage-card[data-index="2"] { animation-delay: 0.3s; }

  @keyframes slideInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .advantage-card:hover {
    border-color: var(--secondary);
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(12, 68, 99, 0.15);
  }

  .advantage-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--blue-light);
    border-radius: 16px;
    color: var(--secondary);
    padding: 10px;
  }

  .advantage-icon svg {
    width: 32px;
    height: 32px;
  }

  .advantage-card h3 {
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 12px;
    line-height: 1.3;
  }

  .advantage-card p {
    font-size: 1.05rem;
    line-height: 1.7;
    color: var(--text);
    opacity: 0.85;
  }

  /* Commission Table Section */
  .commission-section {
    padding: 100px 20px;
    background: linear-gradient(180deg, white 0%, var(--blue-light) 100%);
  }

  .commission-table-wrapper {
    max-width: 700px;
    margin: 0 auto;
    background: white;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(12, 68, 99, 0.1);
  }

  .commission-table {
    width: 100%;
    border-collapse: collapse;
  }

  .commission-table thead {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
  }

  .commission-table thead th {
    color: white;
    font-size: 1.2rem;
    font-weight: 700;
    padding: 24px;
    text-align: left;
  }

  .commission-table thead th:last-child {
    text-align: right;
  }

  .commission-table tbody tr {
    border-bottom: 1px solid var(--gray-light);
    transition: background 0.3s ease;
    opacity: 0;
    animation: fadeIn 0.5s ease-out forwards;
  }

  .commission-table tbody tr[data-index="0"] { animation-delay: 0.1s; }
  .commission-table tbody tr[data-index="1"] { animation-delay: 0.2s; }
  .commission-table tbody tr[data-index="2"] { animation-delay: 0.3s; }
  .commission-table tbody tr[data-index="3"] { animation-delay: 0.4s; }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  .commission-table tbody tr:hover {
    background: var(--blue-light);
  }

  .commission-table tbody tr:last-child {
    border-bottom: none;
  }

  .commission-table td {
    padding: 28px 24px;
    font-size: 1.1rem;
  }

  .type-cell {
    color: var(--primary);
    font-weight: 700;
  }

  .reward-cell {
    text-align: right;
    color: var(--secondary);
    font-weight: 800;
    font-size: 1.4rem;
  }

  /* No Limit Section */
  .no-limit-section {
    padding: 100px 20px;
    background: white;
  }

  .earnings-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .earnings-card {
    text-align: center;
    padding: 40px 24px;
    background: linear-gradient(135deg, var(--blue-light) 0%, rgba(92, 176, 214, 0.05) 100%);
    border-radius: 20px;
    border: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .earnings-card:hover {
    border-color: var(--secondary);
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(12, 68, 99, 0.15);
  }

  .earnings-amount {
    font-size: 3.5rem;
    font-weight: 900;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 16px;
  }

  .earnings-name {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 4px;
  }

  .earnings-role {
    font-size: 1rem;
    color: var(--text);
    opacity: 0.8;
  }

  /* How to Section */
  .how-to-section {
    padding: 100px 20px;
    background: linear-gradient(180deg, white 0%, var(--blue-light) 100%);
  }

  .how-to-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .how-to-steps {
    margin-bottom: 60px;
  }

  .step-card {
    background: white;
    border-radius: 20px;
    padding: 40px;
    box-shadow: 0 10px 40px rgba(12, 68, 99, 0.1);
  }

  .step-number {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.8rem;
    font-weight: 800;
    margin-bottom: 24px;
  }

  .step-card h3 {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 20px;
  }

  .step-card ul {
    list-style: none;
    padding: 0;
  }

  .step-card ul li {
    padding: 12px 0 12px 32px;
    position: relative;
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--text);
  }

  .step-card ul li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--secondary);
    font-weight: 700;
  }

  .step-card a {
    color: var(--secondary);
    font-weight: 600;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .step-card a:hover {
    opacity: 0.7;
  }

  .form-container {
    background: white;
    border-radius: 20px;
    padding: 40px;
    box-shadow: 0 10px 40px rgba(12, 68, 99, 0.1);
    min-height: 600px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .referrals-hero {
      padding: 160px 20px 100px;
    }

    .hero-heading {
      font-size: 3.5rem;
    }

    .advantages-grid {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .earnings-grid {
      grid-template-columns: 1fr;
      gap: 32px;
    }
  }

  @media (max-width: 768px) {
    .referrals-hero {
      padding: 140px 20px 80px;
    }

    .hero-heading {
      font-size: 2.5rem;
    }

    .hero-description {
      font-size: 1.15rem;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .section-header p {
      font-size: 1.05rem;
    }

    .commission-table thead th,
    .commission-table td {
      padding: 16px;
    }

    .form-container {
      padding: 24px;
    }
  }

  @media (max-width: 480px) {
    .hero-heading {
      font-size: 2rem;
    }

    .earnings-amount {
      font-size: 2.5rem;
    }
  }
</style>

<script>
  // Animate earnings numbers on scroll
  const observerOptions = {
    threshold: 0.5,
    rootMargin: '0px'
  };

  const animateNumber = (element: HTMLElement, target: string) => {
    const numericValue = parseInt(target.replace(/\D/g, ''));
    let current = 0;
    const increment = numericValue / 50;
    const duration = 1500;
    const stepTime = duration / 50;

    const timer = setInterval(() => {
      current += increment;
      if (current >= numericValue) {
        element.textContent = target;
        clearInterval(timer);
      } else {
        element.textContent = '€' + Math.floor(current).toLocaleString();
      }
    }, stepTime);
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const element = entry.target as HTMLElement;
        const target = element.dataset.amount;
        if (target) {
          animateNumber(element, target);
          observer.unobserve(element);
        }
      }
    });
  }, observerOptions);

  document.querySelectorAll('.earnings-amount').forEach(el => {
    observer.observe(el);
  });
</script>
