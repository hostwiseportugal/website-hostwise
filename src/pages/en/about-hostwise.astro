---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { aboutPageSchema } from "../../lib/schema/about-page";
import type { ImageMetadata } from 'astro';
import salaGeneralSilveira from '../../assets/images/sala-apartamento-predio-general-silveira.webp';
import salaMatosinhos from '../../assets/images/sala-alojamento-local-matosinhos-sousa-aroso.webp';
import quartoRuaFabrica from '../../assets/images/quarto-alojamento-rua-fabrica-porto.webp';
import quartoObidos from '../../assets/images/quarto-alojamento-local-obidos.webp';
import ourVision from '../../assets/images/about-host-wise-our-vision.webp';
import ourMission from '../../assets/images/about-host-wise-our-mission.webp';

const teamGlob = import.meta.glob<{ default: ImageMetadata }>('../../assets/images/team/*.webp', { eager: true });
const teamPhotos: ImageMetadata[] = Object.values(teamGlob).map(m => m.default);

const stats = [
  { value: "9", label: "Years of Excellence", suffix: "" },
  { value: "40", label: "Talented Team Members", suffix: "+" },
  { value: "625", label: "Properties Managed", suffix: "+" }
];

const missionPillars = [
  {
    title: "Guaranteed Profitability",
    description: "Make your property profitable and a regular, consistent investment source through simple, effective management.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="28" height="28">
      <path d="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"/>
    </svg>`
  },
  {
    title: "Time Freedom",
    description: "Free up time to pursue other investments while we maximize the potential of your accommodation.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="28" height="28">
      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
    </svg>`
  },
  {
    title: "Total Satisfaction",
    description: "Ensure guest satisfaction by making sure all needs and expectations are met.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="28" height="28">
      <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
    </svg>`
  }
];


const schemas = [
  aboutPageSchema({ url: Astro.url.href, name: "About Host Wise", inLanguage: "en" }),
];
const alternates = [
  { hreflang: "pt-PT", href: "https://www.hostwise.pt/sobre-hostwise" },
  { hreflang: "en", href: "https://www.hostwise.pt/en/about-hostwise" },
  { hreflang: "x-default", href: "https://www.hostwise.pt/sobre-hostwise" },
];
---

<Layout title="About Host Wise"
description='Meet Host Wise, a vacation rental management company focused on performance, technology and profitability of tourism assets in Portugal.'
schemas={schemas}
alternates={alternates}>
  <!-- Hero Section -->
  <section class="about-hero">
    <div class="container">
      <div class="hero-badge">
        <span>About Host Wise</span>
      </div>
      <h1 class="hero-title">
        At Host Wise, we manage far more than properties; we build trusted relationships that last for years.
      </h1>
      <p class="hero-text">
        Founded in 2016, Host Wise was born from the desire to revolutionize property management in tourism and accommodation. The value proposition focused on delivering a personalized, simplified experience not only to guests, but also to owners.
      </p>
    </div>
  </section>

  <!-- Story Section with Photos & Stats -->
  <section class="story-section">
    <div class="container">
      <div class="story-grid">
        <div class="story-images">
          <div class="image-box">
            <Image src={salaGeneralSilveira} alt="Apartment living room in Porto managed by Host Wise" />
          </div>
          <div class="image-box">
            <Image src={salaMatosinhos} alt="Local accommodation living room in Matosinhos" />
          </div>
          <div class="image-box">
            <Image src={quartoRuaFabrica} alt="Local accommodation in Porto managed by Host Wise" />
          </div>
          <div class="image-box">
            <Image src={quartoObidos} alt="Local accommodation bedroom in Obidos" />
          </div>
        </div>

        <div class="story-content">
          <p class="story-description">
            The company has grown and evolved, but the goals have remained the same since the start: maximize your investment and provide financial stability through your property with excellent vacation rental and hotel asset management in Portugal.
          </p>

          <div class="stats-grid">
            {stats.map((stat) => (
              <div class="stat-card">
                <div class="stat-value">
                  {stat.value}<span class="stat-suffix">{stat.suffix}</span>
                </div>
                <div class="stat-label">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Vision Section -->
  <section class="vision-section">
    <div class="container">
      <div class="vision-grid">
        <div class="vision-image">
          <Image src={ourVision} alt="Host Wise vision" />
        </div>
        <div class="vision-content">
          <h2>Our Vision</h2>
          <p>
            Our vision for the future is simple: to be Portugal's largest vacation rental and property management company, with the best human and technological resources to offer you the best service with the highest standards of professionalism, integrity, and sustainability.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="mission-section">
    <div class="container">
      <div class="mission-layout">
        <div class="mission-header-with-image">
          <div class="mission-header">
            <h2>Our Mission</h2>
            <p>Host Wise's mission is built on three pillars:</p>
          </div>
          <div class="mission-image">
            <Image src={ourMission} alt="Host Wise mission" />
          </div>
        </div>

        <div class="mission-grid">
          {missionPillars.map((pillar, index) => (
            <div class="mission-card" data-index={index}>
              <div class="mission-icon" set:html={pillar.icon} />
              <h3>{pillar.title}</h3>
              <p>{pillar.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Team Carousel Section -->
  <section class="team-carousel-section">
    <div class="container-full">
      <div class="team-header">
        <div class="team-badge">
          <span>Our Team</span>
        </div>
        <h2>Meet Our Team</h2>
        <p>
          We are more than 40 professionals with extensive experience in tourism and property management focused on delivering services that add value and profitability to your properties.
        </p>
        <p class="team-subtext">
          We are always looking for people with the right skills and mindset to succeed in vacation rental management. Visit our careers page and explore open roles.
        </p>
      </div>

      {teamPhotos.length > 0 && (
        <div class="team-marquee-container">
          <!-- First Row - Left to Right -->
          <div class="team-marquee-row">
            <div class="team-marquee-track">
              {teamPhotos.map((photo) => (
                <div class="team-photo-card">
                  <Image src={photo} alt="Host Wise team member" />
                </div>
              ))}
              {/* Duplicate for seamless loop */}
              {teamPhotos.map((photo) => (
                <div class="team-photo-card">
                  <Image src={photo} alt="Host Wise team member" />
                </div>
              ))}
            </div>
          </div>

          <!-- Second Row - Right to Left -->
          <div class="team-marquee-row">
            <div class="team-marquee-track team-marquee-reverse">
              {teamPhotos.map((photo) => (
                <div class="team-photo-card">
                  <Image src={photo} alt="Host Wise team member" />
                </div>
              ))}
              {/* Duplicate for seamless loop */}
              {teamPhotos.map((photo) => (
                <div class="team-photo-card">
                  <Image src={photo} alt="Host Wise team member" />
                </div>
              ))}
            </div>
          </div>
        </div>
      )}

      <div class="team-cta">
        <a href="/en/careers" class="btn-careers">
          Visit Our Careers Page
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" width="20" height="20">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .about-hero {
    padding: 180px 20px 100px;
    background: linear-gradient(180deg, #F8FCFF 0%, #fff 100%);
    text-align: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .container-full {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .hero-badge {
    display: inline-block;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    padding: 10px 24px;
    border-radius: 30px;
    font-weight: 700;
    font-size: 0.9rem;
    margin-bottom: 32px;
    animation: fadeInDown 0.6s ease-out;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 800;
    color: var(--primary);
    line-height: 1.15;
    margin-bottom: 32px;
    letter-spacing: -0.02em;
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-text {
    font-size: 1.3rem;
    line-height: 1.7;
    color: var(--text);
    opacity: 0.85;
    max-width: 800px;
    margin: 0 auto;
    animation: fadeInUp 0.8s ease-out 0.4s backwards;
  }

  /* Story Section */
  .story-section {
    padding: 100px 20px;
    background: white;
  }

  .story-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .story-images {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }

  .image-box {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .image-box:hover {
    transform: translateY(-4px);
  }

  .image-box.large {
    grid-row: span 2;
  }

  .image-box img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .story-content {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .story-description {
    font-size: 1.2rem;
    line-height: 1.8;
    color: var(--text);
    opacity: 0.85;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .stat-card {
    text-align: center;
    padding: 24px;
    background: var(--blue-light);
    border-radius: 16px;
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    background: linear-gradient(135deg, rgba(92, 176, 214, 0.15) 0%, rgba(92, 176, 214, 0.05) 100%);
    transform: translateY(-4px);
  }

  .stat-value {
    font-size: 3rem;
    font-weight: 800;
    color: var(--primary);
    line-height: 1;
    margin-bottom: 8px;
  }

  .stat-suffix {
    font-size: 2rem;
    margin-left: 4px;
  }

  .stat-label {
    font-size: 0.95rem;
    color: var(--text);
    font-weight: 600;
    opacity: 0.8;
  }

  /* Vision Section */
  .vision-section {
    padding: 100px 20px;
    background: linear-gradient(135deg, var(--blue-light) 0%, rgba(92, 176, 214, 0.05) 100%);
  }

  .vision-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .vision-image {
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(12, 68, 99, 0.15);
    transition: transform 0.3s ease;
  }

  .vision-image:hover {
    transform: translateY(-8px);
  }

  .vision-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .vision-content {
    max-width: 600px;
  }

  .vision-content h2 {
    font-size: 3rem;
    font-weight: 800;
    color: var(--primary);
    margin-bottom: 24px;
  }

  .vision-content p {
    font-size: 1.25rem;
    line-height: 1.8;
    color: var(--text);
    opacity: 0.85;
  }

  /* Mission Section */
  .mission-section {
    padding: 100px 20px;
    background: white;
  }

  .mission-layout {
    display: flex;
    flex-direction: column;
    gap: 60px;
  }

  .mission-header-with-image {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .mission-header {
    text-align: left;
  }

  .mission-header h2 {
    font-size: 3rem;
    font-weight: 800;
    color: var(--primary);
    margin-bottom: 16px;
  }

  .mission-header p {
    font-size: 1.2rem;
    color: var(--text);
    opacity: 0.85;
  }

  .mission-image {
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(12, 68, 99, 0.15);
    transition: transform 0.3s ease;
  }

  .mission-image:hover {
    transform: translateY(-8px);
  }

  .mission-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .mission-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .mission-card {
    background: white;
    border: 2px solid var(--gray-light);
    border-radius: 20px;
    padding: 40px 32px;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    transform: translateY(30px);
    animation: slideInUp 0.6s ease-out forwards;
  }

  .mission-card[data-index="0"] { animation-delay: 0.1s; }
  .mission-card[data-index="1"] { animation-delay: 0.2s; }
  .mission-card[data-index="2"] { animation-delay: 0.3s; }

  @keyframes slideInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .mission-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(12, 68, 99, 0.15);
    border-color: var(--secondary);
  }

  .mission-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 24px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: transform 0.3s ease;
  }

  .mission-card:hover .mission-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .mission-card h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 16px;
  }

  .mission-card p {
    font-size: 1.05rem;
    line-height: 1.7;
    color: var(--text);
    opacity: 0.85;
    margin: 0;
  }

  /* Team Carousel Section */
  .team-carousel-section {
    padding: 100px 20px;
    background: linear-gradient(180deg, white 0%, var(--blue-light) 50%, white 100%);
    overflow: hidden;
  }

  .team-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 60px;
  }

  .team-badge {
    display: inline-block;
    background: linear-gradient(135deg, var(--secondary) 0%, var(--primary) 100%);
    color: white;
    padding: 8px 20px;
    border-radius: 24px;
    font-weight: 700;
    font-size: 0.85rem;
    margin-bottom: 20px;
  }

  .team-header h2 {
    font-size: 3rem;
    font-weight: 800;
    color: var(--primary);
    margin-bottom: 16px;
  }

  .team-header p {
    font-size: 1.15rem;
    line-height: 1.7;
    color: var(--text);
    opacity: 0.85;
    margin-bottom: 16px;
  }

  .team-subtext {
    font-size: 1.05rem !important;
    font-weight: 600;
    color: var(--primary);
  }

  /* Team Marquee */
  .team-marquee-container {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin: 60px 0;
  }

  .team-marquee-row {
    overflow: hidden;
    position: relative;
  }

  .team-marquee-track {
    display: flex;
    gap: 20px;
    animation: scrollTeamLeft 50s linear infinite;
    will-change: transform;
  }

  .team-marquee-reverse {
    animation: scrollTeamRight 50s linear infinite;
  }

  @keyframes scrollTeamLeft {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-90%);
    }
  }

  @keyframes scrollTeamRight {
    0% {
      transform: translateX(-180%);
    }
    100% {
      transform: translateX(0);
    }
  }

  .team-photo-card {
    flex: 0 0 auto;
    width: 200px;
    height: 200px;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .team-photo-card:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 32px rgba(12, 68, 99, 0.2);
  }

  .team-photo-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .team-marquee-row:hover .team-marquee-track {
    animation-play-state: paused;
  }

  /* Team CTA */
  .team-cta {
    text-align: center;
    margin-top: 60px;
  }

  .btn-careers {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 18px 36px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 16px rgba(12, 68, 99, 0.25);
  }

  .btn-careers:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 28px rgba(12, 68, 99, 0.35);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .about-hero {
      padding: 160px 20px 80px;
    }

    .hero-title {
      font-size: 3rem;
    }

    .hero-text {
      font-size: 1.15rem;
    }

    .story-grid {
      grid-template-columns: 1fr;
      gap: 50px;
    }

    .stats-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .vision-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .mission-header-with-image {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .mission-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .vision-content h2,
    .mission-header h2,
    .team-header h2 {
      font-size: 2.5rem;
    }
  }

  @media (max-width: 768px) {
    .about-hero {
      padding: 140px 20px 60px;
    }

    .hero-title {
      font-size: 2.25rem;
    }

    .hero-text {
      font-size: 1.05rem;
    }

    .story-section,
    .vision-section,
    .mission-section,
    .team-carousel-section {
      padding: 80px 20px;
    }

    .story-images {
      grid-template-columns: 1fr;
    }

    .image-box.large {
      grid-row: span 1;
    }

    .story-description {
      font-size: 1.05rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .stat-value {
      font-size: 2.5rem;
    }

    .vision-content h2,
    .mission-header h2,
    .team-header h2 {
      font-size: 2rem;
    }

    .vision-content p,
    .mission-header p {
      font-size: 1.05rem;
    }

    .team-photo-card {
      width: 160px;
      height: 160px;
    }

    .btn-careers {
      width: 100%;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 1.85rem;
    }

    .hero-text {
      font-size: 1rem;
    }

    .stat-value {
      font-size: 2rem;
    }

    .vision-content h2,
    .mission-header h2,
    .team-header h2 {
      font-size: 1.75rem;
    }

    .mission-card {
      padding: 32px 24px;
    }

    .mission-card h3 {
      font-size: 1.25rem;
    }

    .team-photo-card {
      width: 140px;
      height: 140px;
    }
  }
</style>
