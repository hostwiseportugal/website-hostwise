<style>
  .models-intro {
    padding: 100px 20px;
    background: linear-gradient(180deg, white 0%, var(--blue-light) 50%, white 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .models-intro-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 50px;
  }

  .models-intro-title {
    font-size: 3.5rem;
    line-height: 1.1;
    color: var(--primary);
    font-weight: 700;
    letter-spacing: -0.02em;
    text-wrap: balance;
    max-width: 800px;
  }

  .models-intro-text {
    display: flex;
    flex-direction: column;
    gap: 24px;
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text);
    max-width: 800px;
  }

  .models-intro-text p {
    margin: 0;
  }

  .models-intro-text strong {
    color: var(--primary);
    font-weight: 600;
  }

  /* Model Cards */
  .models-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
    width: 100%;
    max-width: 1100px;
  }

  .model-card {
    background: white;
    border: 3px solid var(--gray-light);
    border-radius: 24px;
    padding: 48px 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .model-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(90deg, var(--primary) 0%, var(--secondary) 100%);
    transform: scaleX(0);
    transition: transform 0.4s ease;
  }

  .model-card:hover {
    border-color: var(--secondary);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    transform: translateY(-8px);
  }

  .model-card:hover::before {
    transform: scaleX(1);
  }

  .model-card.guaranteed {
    border-color: var(--secondary);
    box-shadow: 0 12px 40px rgba(92, 176, 214, 0.2);
  }

  .card-badge {
    position: absolute;
    top: 20px;
    right: 20px;
    background: var(--secondary);
    color: white;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .card-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    margin-bottom: 24px;
    transition: transform 0.3s;
  }

  .model-card:hover .card-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .model-card h3 {
    font-size: 2rem;
    color: var(--primary);
    margin: 0 0 8px 0;
    font-weight: 700;
  }

  .model-subtitle {
    font-size: 0.95rem;
    color: var(--secondary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0 0 20px 0;
  }

  .model-description {
    font-size: 1.05rem;
    line-height: 1.6;
    color: var(--text);
    margin: 0 0 32px 0;
  }

  .model-description strong {
    color: var(--primary);
    font-weight: 600;
  }

  .model-benefits {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 12px;
    width: 100%;
    margin: 0 0 32px 0;
    padding: 0;
  }

  .model-benefits li {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 0.95rem;
    color: var(--text);
    text-align: left;
  }

  .model-benefits svg {
    color: var(--secondary);
    flex-shrink: 0;
  }

  .model-cta {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1.05rem;
    transition: all 0.3s;
    margin-top: auto;
  }

  .model-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(12, 68, 99, 0.3);
    gap: 12px;
  }

  .model-cta svg {
    transition: transform 0.3s;
  }

  .model-cta:hover svg {
    transform: translateY(4px);
  }

  /* Models CTA */
  .models-cta {
    text-align: center;
    margin-top: 60px;
    padding: 48px 40px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    border-radius: 24px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .models-cta h3 {
    font-size: 2rem;
    color: white;
    margin-bottom: 12px;
    font-weight: 700;
  }

  .models-cta p {
    font-size: 1.1rem;
    color: white;
    opacity: 0.95;
    margin-bottom: 28px;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 16px 36px;
    background: white;
    color: var(--primary);
    border-radius: 12px;
    font-weight: 700;
    font-size: 1.05rem;
    text-decoration: none;
    transition: all 0.3s;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.25);
    gap: 16px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .models-intro-title {
      font-size: 2.75rem;
    }

    .models-cards {
      grid-template-columns: 1fr;
      max-width: 600px;
    }
  }

  @media (max-width: 768px) {
    .models-intro {
      padding: 80px 20px;
    }

    .models-intro-title {
      font-size: 2rem;
    }

    .models-intro-text {
      font-size: 1rem;
    }

    .model-card {
      padding: 40px 28px;
    }

    .card-icon {
      width: 70px;
      height: 70px;
    }

    .model-card h3 {
      font-size: 1.75rem;
    }

    .model-description {
      font-size: 1rem;
    }

    .models-cta {
      padding: 40px 28px;
    }

    .models-cta h3 {
      font-size: 1.65rem;
    }

    .models-cta p {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .models-intro-title {
      font-size: 1.75rem;
    }

    .card-badge {
      top: 16px;
      right: 16px;
      font-size: 0.75rem;
      padding: 5px 12px;
    }

    .models-cta h3 {
      font-size: 1.5rem;
    }

    .models-cta p {
      font-size: 0.95rem;
    }

    .cta-button {
      font-size: 1rem;
      padding: 14px 28px;
    }
  }
</style>

<script>
  // Smooth scroll para as âncoras
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href')!);
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>