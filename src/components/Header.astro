<script>
  class HeaderManager {
    private header: HTMLElement | null;
    private mobileMenuBtn: HTMLElement | null;
    private mobileMenu: HTMLElement | null;
    private mobileSections: NodeListOf<HTMLElement>;
    private langButtons: NodeListOf<HTMLElement>;

    constructor() {
      this.header = document.querySelector('.header');
      this.mobileMenuBtn = document.querySelector('.mobile-menu-btn');
      this.mobileMenu = document.querySelector('.mobile-menu');
      this.mobileSections = document.querySelectorAll('.mobile-section');
      this.langButtons = document.querySelectorAll('.lang-btn');

      this.init();
    }

    init() {
      // Scroll detection
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
          this.header?.classList.add('scrolled');
        } else {
          this.header?.classList.remove('scrolled');
        }
      });

      // Mobile menu toggle
      this.mobileMenuBtn?.addEventListener('click', () => {
        this.mobileMenuBtn?.classList.toggle('active');
        this.mobileMenu?.classList.toggle('active');
        document.body.style.overflow = this.mobileMenu?.classList.contains('active') ? 'hidden' : '';
      });

      // Mobile sections accordion
      this.mobileSections.forEach(section => {
        const title = section.querySelector('.mobile-section-title');
        title?.addEventListener('click', () => {
          section.classList.toggle('active');
        });
      });

      // Language switcher
      this.langButtons.forEach(btn => {
        btn.addEventListener('click', () => {
          this.langButtons.forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          
          const lang = btn.dataset.lang;
          console.log('Language changed to:', lang);
        });
      });

      // Close mobile menu on link click
      const mobileLinks = document.querySelectorAll('.mobile-submenu a, .mobile-link');
      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          this.mobileMenuBtn?.classList.remove('active');
          this.mobileMenu?.classList.remove('active');
          document.body.style.overflow = '';
        });
      });
    }
  }

  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      new HeaderManager();
    });
  }
</script>