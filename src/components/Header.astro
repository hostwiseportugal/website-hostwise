<style>
  /* Header - Transparente no topo */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: transparent;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    z-index: 1000;
    transition: all 0.3s;
  }

  .header.scrolled {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.05);
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 16px 24px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* Logo - mant√©m cor original sempre */
  .logo img {
    height: 40px;
    width: auto;
    transition: all 0.3s;
  }

  /* Desktop Navigation */
  .nav-desktop {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .nav-item {
    position: relative;
  }

  /* Links brancos no topo, azuis quando scrolled */
  .nav-link {
    display: flex;
    align-items: center;
    gap: 6px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    padding: 8px 0;
    background: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s;
  }

  .header.scrolled .nav-link {
    color: var(--primary);
  }

  .nav-link:hover {
    color: var(--secondary);
  }

  .nav-link .nav-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 16px;
    height: 16px;
  }

  .nav-link .nav-icon svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s;
  }

  .has-mega:hover .nav-link .nav-icon svg {
    transform: rotate(180deg);
  }

  /* Mega Menu */
  .mega-menu {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    margin-top: 16px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s;
    min-width: 420px;
  }

  .has-mega:hover .mega-menu {
    opacity: 1;
    visibility: visible;
    margin-top: 12px;
  }

  .mega-menu-content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .mega-item {
    display: flex;
    gap: 16px;
    padding: 16px;
    border-radius: 12px;
    transition: all 0.3s;
    text-decoration: none;
  }

  .mega-item:hover {
    background: var(--blue-light);
  }

  .mega-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    background: var(--blue-light);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--secondary);
    padding: 12px;
  }

  .mega-icon svg {
    width: 24px;
    height: 24px;
  }

  .mega-item:hover .mega-icon {
    background: white;
  }

  /* Mega Title - Div em vez de H4 */
  .mega-title {
    font-size: 1rem;
    color: var(--primary);
    margin: 0 0 4px 0;
    font-weight: 600;
  }

  .mega-text p {
    font-size: 0.85rem;
    color: var(--text);
    opacity: 0.8;
    margin: 0;
    line-height: 1.4;
  }

  /* Header Actions */
  .header-actions {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  /* Language Selector */
  .language-selector {
    display: flex;
    gap: 8px;
    padding: 4px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    transition: background 0.3s;
  }

  .header.scrolled .language-selector {
    background: var(--gray-light);
  }

  .lang-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    border: none;
    background: transparent;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s;
    font-weight: 600;
    font-size: 0.85rem;
    color: var(--primary);
  }

  .lang-btn:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .header.scrolled .lang-btn:hover {
    background: white;
  }

  .lang-btn.active {
    background: var(--primary);
    color: white;
  }

  .flag {
    font-size: 1.1rem;
  }

  /* CTA Buttons */
  .cta-buttons {
    display: flex;
    gap: 12px;
  }

  .btn-secondary, .btn-primary {
    padding: 10px 24px;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.3s;
    white-space: nowrap;
  }

  /* Receber Proposta - DESTAQUE */
  .btn-primary {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    border: none;
    box-shadow: 0 4px 16px rgba(12, 68, 99, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(12, 68, 99, 0.4);
  }

  /* Reserve Connosco - Secund√°rio */
  .btn-secondary {
    background: rgba(255, 255, 255, 0.2);
    border: 2px solid var(--primary);
    color: var(--primary);
    backdrop-filter: blur(10px);
  }

  .header.scrolled .btn-secondary {
    background: transparent;
    border: 2px solid var(--primary);
    color: var(--primary);
  }

  .btn-secondary:hover {
    background:var(--primary);
  }

  .header.scrolled .btn-secondary:hover {
    background: var(--primary);
    color: white;
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
  }

  .mobile-menu-btn span {
    width: 24px;
    height: 2px;
    background: var(--primary);
    transition: all 0.3s;
  }

  .mobile-menu-btn.active span:nth-child(1) {
    transform: rotate(45deg) translateY(7px);
  }

  .mobile-menu-btn.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-btn.active span:nth-child(3) {
    transform: rotate(-45deg) translateY(-7px);
  }

  /* Mobile Menu */
  .mobile-menu {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: white;
    overflow-y: auto;
    transform: translateX(100%);
    transition: transform 0.3s;
    padding-top: 73px;
    z-index: 999;
  }

  .mobile-menu.active {
    transform: translateX(0);
  }

  .mobile-menu-content {
    padding: 24px;
  }

  .mobile-section {
    border-bottom: 1px solid var(--gray-light);
    padding: 16px 0;
  }

  .mobile-section-title {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: none;
    border: none;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--primary);
    padding: 12px 0;
    cursor: pointer;
  }

  .mobile-section-title .mobile-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
  }

  .mobile-section-title .mobile-icon svg {
    width: 20px;
    height: 20px;
    transition: transform 0.3s;
  }

  .mobile-section.active .mobile-section-title .mobile-icon svg {
    transform: rotate(180deg);
  }

  .mobile-submenu {
    display: none;
    flex-direction: column;
    gap: 12px;
    padding: 12px 0 0 16px;
  }

  .mobile-section.active .mobile-submenu {
    display: flex;
  }

  .mobile-submenu a {
    color: var(--text);
    text-decoration: none;
    padding: 8px 0;
    font-size: 0.95rem;
  }

  .mobile-link {
    display: block;
    padding: 20px 0;
    border-bottom: 1px solid var(--gray-light);
    color: var(--primary);
    font-weight: 600;
    font-size: 1.1rem;
    text-decoration: none;
  }

  .mobile-ctas {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-top: 24px;
  }

  .mobile-ctas .btn-secondary,
  .mobile-ctas .btn-primary {
    width: 100%;
    text-align: center;
    padding: 14px 24px;
  }

  .mobile-ctas .btn-secondary {
    background: transparent;
    border: 2px solid var(--primary);
    color: var(--primary);
  }

  .mobile-ctas .btn-secondary:hover {
    background: var(--primary);
    color: white;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .nav-desktop {
      display: none;
    }

    .cta-buttons {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }

    .mobile-menu {
      display: block;
    }
  }

  @media (max-width: 768px) {
    .header-container {
      padding: 12px 20px;
    }

    .logo img {
      height: 32px;
    }

    .language-selector {
      gap: 4px;
    }

    .lang-btn {
      padding: 6px 8px;
      font-size: 0.8rem;
    }

    .lang-text {
      display: none;
    }
  }
</style>

<script>
  class HeaderManager {
    private header: HTMLElement | null;
    private mobileMenuBtn: HTMLElement | null;
    private mobileMenu: HTMLElement | null;
    private mobileSections: NodeListOf<HTMLElement>;
    private langButtons: NodeListOf<HTMLElement>;

    constructor() {
      this.header = document.querySelector('.header');
      this.mobileMenuBtn = document.querySelector('.mobile-menu-btn');
      this.mobileMenu = document.querySelector('.mobile-menu');
      this.mobileSections = document.querySelectorAll('.mobile-section');
      this.langButtons = document.querySelectorAll('.lang-btn');

      this.init();
    }

    init() {
      // Scroll detection
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
          this.header?.classList.add('scrolled');
        } else {
          this.header?.classList.remove('scrolled');
        }
      });

      // Mobile menu toggle
      this.mobileMenuBtn?.addEventListener('click', () => {
        this.mobileMenuBtn?.classList.toggle('active');
        this.mobileMenu?.classList.toggle('active');
        document.body.style.overflow = this.mobileMenu?.classList.contains('active') ? 'hidden' : '';
      });

      // Mobile sections accordion
      this.mobileSections.forEach(section => {
        const title = section.querySelector('.mobile-section-title');
        title?.addEventListener('click', () => {
          section.classList.toggle('active');
        });
      });

      // Language switcher
      this.langButtons.forEach(btn => {
        btn.addEventListener('click', () => {
          this.langButtons.forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          
          const lang = btn.dataset.lang;
          console.log('Language changed to:', lang);
        });
      });

      // Close mobile menu on link click
      const mobileLinks = document.querySelectorAll('.mobile-submenu a, .mobile-link');
      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          this.mobileMenuBtn?.classList.remove('active');
          this.mobileMenu?.classList.remove('active');
          document.body.style.overflow = '';
        });
      });
    }
  }

  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      new HeaderManager();
    });
  }
</script>