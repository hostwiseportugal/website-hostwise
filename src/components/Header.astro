    height: 40px;
    width: auto;
    transition: all 0.3s;
  }

  /* Desktop Navigation */
  .nav-desktop {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .nav-item {
    position: relative;
  }

  /* Links brancos no topo, azuis quando scrolled */
