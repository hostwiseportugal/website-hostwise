import { iconMap } from '../icons/iconMap';
import { headerCopy } from "../lib/i18n/header";
import { getAlternateHref } from '../lib/i18n/routes';

type Alternate = { hreflang: string; href: string };

const pathname = Astro.url.pathname;
const isEn = pathname === "/en" || pathname.startsWith("/en/");
const lang = isEn ? "en" : "pt";
const t = headerCopy[lang];
const currentLang = lang;

// props (vindas do Layout)
const { alternates = [] } = Astro.props as {
  alternates?: Alternate[];
};

// helpers: transformar href absoluto em path relativo (para dev/prod)
function toPath(href: string) {
  try {
    // se for absoluto, parse e devolve pathname
    if (href.startsWith("http://") || href.startsWith("https://")) {
      const u = new URL(href);
      return u.pathname || "/";
    }
    // jÃ¡ Ã© relativo
    return href || "/";
  } catch {
    return href || "/";
  }
}

// 1) tentar alternates (melhor para blog posts com slugs diferentes)
const ptAlt = alternates.find(a => a.hreflang?.toLowerCase() === "pt-pt");
const enAlt = alternates.find(a => a.hreflang?.toLowerCase() === "en");

const ptHref = ptAlt?.href ? toPath(ptAlt.href) : getAlternateHref(pathname, "pt");
const enHref = enAlt?.href ? toPath(enAlt.href) : getAlternateHref(pathname, "en");

// links de navegaÃ§Ã£o (hardcoded por lÃ­ngua)
const links = lang === "en"
  ? {
      service1: "/en/vacation-rental-management",
      service2: "/en/serviced-accommodation",
      service3: "/en/hotel-asset-management",
      model1: "/en/rent-to-rent",
      model2: "/en/commission",
      referrals: "/en/referrals",
      typeform: "https://hostwise.typeform.com/to/fYQv5Zi3",
    }
  : {
      service1: "/gestao-alojamento-local",
      service2: "/gestao-empreendimentos-turisticos",
      service3: "/gestao-ativos-hoteleiros",
      model1: "/rentabilidade-garantida",
      model2: "/comissao",
      referrals: "/referrals",
      typeform: "https://hostwise.typeform.com/to/pWgP4EuZ",
    };
