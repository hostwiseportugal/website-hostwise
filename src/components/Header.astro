    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--primary);
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    padding: 8px 0;
    background: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s;
  }

  .header.scrolled .nav-link {
    color: var(--primary);
  }

  .nav-link:hover {
    color: var(--secondary);
  }

  .nav-link svg {
    transition: transform 0.3s;
  }

  .has-mega:hover .nav-link svg {
    transform: rotate(180deg);
  }

  /* Mega Menu */
  .mega-menu {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    margin-top: 16px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s;
    min-width: 420px;
  }

  .has-mega:hover .mega-menu {
    opacity: 1;
    visibility: visible;
    margin-top: 12px;
  }

