  }

  .lang-btn.active {
    background: var(--primary);
    color: white;
  }

  .flag {
    font-size: 1.1rem;
  }

  /* CTA Buttons */
  .cta-buttons {
    display: flex;
    gap: 12px;
  }

  .btn-secondary, .btn-primary {
    padding: 10px 24px;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.3s;
    white-space: nowrap;
  }

  /* Receber Proposta - DESTAQUE */
  .btn-primary {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    border: none;
    box-shadow: 0 4px 16px rgba(12, 68, 99, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(12, 68, 99, 0.4);
  }

  /* Reserve Connosco - SecundÃ¡rio */
  .btn-secondary {
    background: rgba(255, 255, 255, 0.2);
    border: 2px solid var(--primary);
    color: var(--primary);
    backdrop-filter: blur(10px);
  }

  .header.scrolled .btn-secondary {
    background: transparent;
    border: 2px solid var(--primary);
    color: var(--primary);
  }

  .btn-secondary:hover {
    background:var(--primary);
  }

  .header.scrolled .btn-secondary:hover {
    background: var(--primary);
    color: white;
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
  }

  .mobile-menu-btn span {
    width: 24px;
    height: 2px;
    background: var(--primary);
    transition: all 0.3s;
  }

  .mobile-menu-btn.active span:nth-child(1) {
    transform: rotate(45deg) translateY(7px);
  }

  .mobile-menu-btn.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-btn.active span:nth-child(3) {
    transform: rotate(-45deg) translateY(-7px);
  }

  /* Mobile Menu */
  .mobile-menu {
    display: none;
    position: fixed;
    top: 65px;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100vh;
    height: 100dvh;
    background: white;
    overflow-y: auto;
    transform: translateX(100%);
    transition: transform 0.3s;
  }

  .mobile-menu.active {
    transform: translateX(0) !important;
  }

  .mobile-menu-content {
    padding: 24px;
  }

  .mobile-section {
    border-bottom: 1px solid var(--gray-light);
    padding: 16px 0;
  }

  .mobile-section-title {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: none;
    border: none;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--primary);
    padding: 12px 0;
    cursor: pointer;
  }

  .mobile-section-title .mobile-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
  }

  .mobile-section-title .mobile-icon svg {
    width: 20px;
    height: 20px;
    transition: transform 0.3s;
  }

  .mobile-section.active .mobile-section-title .mobile-icon svg {
    transform: rotate(180deg);
  }

  .mobile-submenu {
    display: none;
    flex-direction: column;
    gap: 12px;
    padding: 12px 0 0 16px;
  }

  .mobile-section.active .mobile-submenu {
    display: flex;
  }

  .mobile-submenu a {
    color: var(--text);
    text-decoration: none;
    padding: 8px 0;
    font-size: 0.95rem;
  }

  .mobile-link {
    display: block;
    padding: 20px 0;
    border-bottom: 1px solid var(--gray-light);
    color: var(--primary);
    font-weight: 600;
    font-size: 1.1rem;
    text-decoration: none;
  }

  .mobile-ctas {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-top: 24px;
  }

  .mobile-ctas .btn-secondary,
  .mobile-ctas .btn-primary {
    width: 100%;
    text-align: center;
    padding: 14px 24px;
  }

  .mobile-ctas .btn-secondary {
    background: transparent;
    border: 2px solid var(--primary);
    color: var(--primary);
  }

  .mobile-ctas .btn-secondary:hover {
    background: var(--primary);
    color: white;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .nav-desktop {
      display: none;
    }

    .cta-buttons {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }

    .mobile-menu {
      display: block;
    }

  }

  @media (max-width: 768px) {
    .header-container {
      padding: 12px 20px;
    }

    .logo img {
      height: 32px;
    }

    .language-selector {
      gap: 4px;
    }

    .lang-btn {
      padding: 6px 8px;
      font-size: 0.8rem;
    }

    .lang-text {
      display: none;
    }
  }
</style>

<script>
  class HeaderManager {
    constructor() {
      this.header = document.querySelector('.header');
      this.mobileMenuBtn = document.querySelector('.mobile-menu-btn');
      this.mobileMenu = document.querySelector('.mobile-menu');
      this.mobileSections = document.querySelectorAll('.mobile-section');
      this.init();
    }

    init() {
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) this.header?.classList.add('scrolled');
        else this.header?.classList.remove('scrolled');
      });

      this.mobileMenuBtn?.addEventListener('click', () => {
        this.mobileMenuBtn?.classList.toggle('active');
        this.mobileMenu?.classList.toggle('active');
        document.body.style.overflow = this.mobileMenu?.classList.contains('active') ? 'hidden' : '';
      });

      this.mobileSections.forEach((section) => {
        const title = section.querySelector('.mobile-section-title');
        title?.addEventListener('click', () => section.classList.toggle('active'));
      });

      const mobileLinks = document.querySelectorAll('.mobile-submenu a, .mobile-link');
      mobileLinks.forEach((link) => {
        link.addEventListener('click', () => {
          this.mobileMenuBtn?.classList.remove('active');
          this.mobileMenu?.classList.remove('active');
          document.body.style.overflow = '';
        });
      });
    }
  }

  document.addEventListener('DOMContentLoaded', () => new HeaderManager());
</script>
