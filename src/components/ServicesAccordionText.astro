---
import OptimizedImage from './OptimizedImage.astro';
import type { ImageMetadata } from 'astro';
import { property1 } from '../lib/fallback-images';

interface Service {
  title: string;
  content: string; // HTML text content instead of bullet points
}

interface Props {
  title?: string;
  description?: string;
  services?: Service[];
  image?: ImageMetadata | string;
  ctaLabel?: string;
  ctaUrl?: string;
}

const {
  title = 'O que fazemos',
  description = 'Placeholder - Descrição da secção de serviços.',
  image = property1,
  ctaLabel = 'Receber uma proposta',
  ctaUrl = '#contacto',
  services = [
    {
      title: 'Placeholder - Serviço 1',
      content: '<p>Placeholder - Descrição detalhada do serviço 1. Este texto pode conter múltiplos parágrafos e formatação HTML.</p>',
    },
    {
      title: 'Placeholder - Serviço 2',
      content: '<p>Placeholder - Descrição detalhada do serviço 2. Este texto pode conter múltiplos parágrafos e formatação HTML.</p>',
    },
    {
      title: 'Placeholder - Serviço 3',
      content: '<p>Placeholder - Descrição detalhada do serviço 3. Este texto pode conter múltiplos parágrafos e formatação HTML.</p>',
    },
  ],
} = Astro.props;
---

<section class="services-accordion-text-section">
  <div class="container">
    {image && (
      <div class="section-image">
        <OptimizedImage src={image} alt={title || ''} />
      </div>
    )}

    <div class="section-header">
      <h2>{title}</h2>
      <p>{description}</p>
    </div>

    <div class="accordion-list">
      {services.map((service, index) => (
        <div class="accordion-item" data-index={index}>
          <button class="accordion-trigger" aria-expanded="false">
            <div class="accordion-title">
              <span class="accordion-number">{String(index + 1).padStart(2, '0')}</span>
              <span>{service.title}</span>
            </div>
            <div class="accordion-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 5v14M5 12h14"/>
              </svg>
            </div>
          </button>
          <div class="accordion-content">
            <div class="service-text" set:html={service.content} />
          </div>
        </div>
      ))}
    </div>

    <div class="cta-wrapper">
      <a href={ctaUrl} class="btn-cta">{ctaLabel}</a>
    </div>
  </div>
</section>

<style>
  .services-accordion-text-section {
    padding: 100px 20px;
    background: linear-gradient(180deg, white 0%, var(--blue-light) 50%, white 100%);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
  }

  .section-image {
    margin-bottom: 48px;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 16px 48px rgba(12, 68, 99, 0.15);
  }

  .section-image img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    aspect-ratio: 16/9;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-header h2 {
    font-size: 2.75rem;
    font-weight: 800;
    color: var(--primary);
    margin-bottom: 20px;
    letter-spacing: -0.02em;
  }

  .section-header p {
    font-size: 1.15rem;
    color: var(--text);
    line-height: 1.7;
    opacity: 0.85;
    max-width: 700px;
    margin: 0 auto;
  }

  .accordion-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .cta-wrapper {
    margin-top: 48px;
    text-align: center;
  }

  .btn-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 18px 36px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 8px 24px rgba(12, 68, 99, 0.25);
  }

  .btn-cta:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 32px rgba(12, 68, 99, 0.35);
  }

  .accordion-item {
    background: white;
    border-radius: 16px;
    border: 2px solid var(--gray-light);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .accordion-item:hover {
    border-color: rgba(92, 176, 214, 0.3);
  }

  .accordion-item.active {
    border-color: var(--secondary);
    box-shadow: 0 8px 32px rgba(12, 68, 99, 0.12);
  }

  .accordion-trigger {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 24px 28px;
    background: transparent;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: background 0.3s;
  }

  .accordion-trigger:hover {
    background: rgba(92, 176, 214, 0.05);
  }

  .accordion-title {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .accordion-number {
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--secondary);
    background: var(--blue-light);
    padding: 6px 12px;
    border-radius: 8px;
  }

  .accordion-title span:last-child {
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--primary);
  }

  .accordion-icon {
    width: 28px;
    height: 28px;
    color: var(--secondary);
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .accordion-icon svg {
    width: 100%;
    height: 100%;
  }

  .accordion-item.active .accordion-icon {
    transform: rotate(45deg);
  }

  .accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .accordion-item.active .accordion-content {
    max-height: 800px;
  }

  .service-text {
    padding: 0 28px 28px;
    border-top: 1px solid var(--gray-light);
    padding-top: 20px;
  }

  .service-text :global(p) {
    font-size: 1.05rem;
    color: var(--text);
    line-height: 1.7;
    margin: 0 0 16px 0;
  }

  .service-text :global(p:last-child) {
    margin-bottom: 0;
  }

  .service-text :global(strong) {
    color: var(--primary);
    font-weight: 600;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .services-accordion-text-section {
      padding: 80px 20px;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .section-header p {
      font-size: 1.05rem;
    }

    .accordion-trigger {
      padding: 20px;
    }

    .accordion-title {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }

    .accordion-title span:last-child {
      font-size: 1.05rem;
    }

    .service-text {
      padding: 0 20px 20px;
    }

    .service-text :global(p) {
      font-size: 0.95rem;
    }

    .cta-wrapper {
      margin-top: 40px;
    }

    .btn-cta {
      width: 100%;
      padding: 16px 28px;
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .section-header h2 {
      font-size: 1.75rem;
    }
  }
</style>

<script>
  const accordionItems = document.querySelectorAll('.services-accordion-text-section .accordion-item');

  accordionItems.forEach((item) => {
    const trigger = item.querySelector('.accordion-trigger');

    trigger?.addEventListener('click', () => {
      const isActive = item.classList.contains('active');

      // Close all items in this section
      accordionItems.forEach((otherItem) => {
        otherItem.classList.remove('active');
        const otherTrigger = otherItem.querySelector('.accordion-trigger');
        otherTrigger?.setAttribute('aria-expanded', 'false');
      });

      // Toggle current item
      if (!isActive) {
        item.classList.add('active');
        trigger.setAttribute('aria-expanded', 'true');
      }
    });
  });

  // Open first item by default
  if (accordionItems.length > 0) {
    accordionItems[0].classList.add('active');
    accordionItems[0].querySelector('.accordion-trigger')?.setAttribute('aria-expanded', 'true');
  }
</script>
