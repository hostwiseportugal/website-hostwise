---
interface BenefitItem {
  title: string;
  text: string;
}

interface Props {
  sectionId?: string;
  badgeText?: string;
  defaultAmount?: string;
  period?: string;
  amountNote?: string;
  guaranteeBadgeText?: string;
  stat1Value?: string;
  stat1Label?: string;
  stat2Value?: string;
  stat2Label?: string;
  heading?: string;
  leadText?: string;
  benefits?: BenefitItem[];
  ctaPrimaryLabel?: string;
  ctaPrimaryUrl?: string;
  ctaSecondaryLabel?: string;
  ctaSecondaryUrl?: string;
  infoNote?: string;
  amounts?: string[];
}

const {
  sectionId = 'rentabilidade-garantida',
  badgeText = 'Rentabilidade Garantida',
  defaultAmount = '1.200',
  period = '/mês',
  amountNote = '*Valor personalizado após avaliação do imóvel',
  guaranteeBadgeText = '100% Garantido Todos os Meses',
  stat1Value = '0%',
  stat1Label = 'Risco de Falta de Ocupação',
  stat2Value = '100%',
  stat2Label = 'Previsibilidade',
  heading = 'Prefere Segurança Total?<br>Receba um Valor Fixo Garantido.',
  leadText = 'Esqueça as preocupações com ocupação. Com o nosso modelo de <strong>Rentabilidade Garantida</strong>, recebe um valor fixo todos os meses, independentemente de tudo.',
  benefits = [
    { title: 'Rendimento Fixo Mensal', text: 'Valor garantido na sua conta, sem variações' },
    { title: 'Zero Preocupações', text: 'Não se preocupa com ocupação, manutenção ou utilities' },
    { title: 'Contratos de Longo Prazo', text: 'Segurança de 3 a 10 anos com pagamentos pontuais' },
  ],
  ctaPrimaryLabel = 'Solicitar Avaliação',
  ctaPrimaryUrl = 'https://hostwise.typeform.com/to/pWgP4EuZ',
  ctaSecondaryLabel = 'Saber Mais sobre Este Modelo',
  ctaSecondaryUrl = '/rentabilidade-garantida',
  infoNote = 'Ideal para proprietários que valorizam previsibilidade e tranquilidade acima de potencial variável de ganhos.',
  amounts = ['800', '1.200', '1.500', '1.800', '2.200', '2.800', '3.200'],
} = Astro.props as Props;
---

<section class="guaranteed-rent-preview" id={sectionId}>
  <div class="container">
    <div class="content-wrapper">
      <!-- Left: Visual Impact -->
      <div class="visual-side">
        <div class="main-visual-card">
  <div class="card-badge">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="18" height="18">
      <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
    </svg>
    {badgeText}
  </div>

  <div class="amount-showcase">
    <span class="currency">€</span>
    <span class="amount" id="dynamicAmount" data-amounts={JSON.stringify(amounts)}>{defaultAmount}</span>
    <span class="period">{period}</span>
  </div>
  <p class="amount-note">{amountNote}</p>

  <div class="guarantee-badge">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
      <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
    </svg>
    <span>{guaranteeBadgeText}</span>
  </div>

  <div class="floating-stats">
    <div class="floating-stat">
      <span class="stat-value">{stat1Value}</span>
      <span class="stat-label">{stat1Label}</span>
    </div>
    <div class="floating-stat">
      <span class="stat-value">{stat2Value}</span>
      <span class="stat-label">{stat2Label}</span>
    </div>
  </div>
</div>
      </div>

      <!-- Right: Content -->
      <div class="content-side">


        <h2 set:html={heading} />

        <p class="lead-text" set:html={leadText} />

        <div class="benefits-list">
          {benefits.map((benefit) => (
            <div class="benefit-item">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
              </svg>
              <div>
                <strong>{benefit.title}</strong>
                <p>{benefit.text}</p>
              </div>
            </div>
          ))}
        </div>

        <div class="cta-area">
          <a href={ctaPrimaryUrl} class="btn-primary">
            {ctaPrimaryLabel}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
              <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
            </svg>
          </a>
          <a href={ctaSecondaryUrl} class="btn-secondary">
            {ctaSecondaryLabel}
          </a>
        </div>

        <div class="info-note">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
          </svg>
          <p>{infoNote}</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .guaranteed-rent-preview {
    padding: 100px 20px;
    background: white;
    position: relative;
    overflow: hidden;
  }

  .guaranteed-rent-preview::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 50%;
    height: 100%;
    background: white;
    pointer-events: none;
  }

  .container {
    max-width: 1300px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }

  /* Visual Side */
  .visual-side {
    position: relative;
  }

  .main-visual-card {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    border-radius: 32px;
    padding: 48px 40px;
    color: white;
    box-shadow: 0 24px 64px rgba(12, 68, 99, 0.3);
    position: relative;
    overflow: hidden;
  }

  .main-visual-card::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 60%);
    animation: pulse 6s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1) rotate(0deg); opacity: 0.5; }
    50% { transform: scale(1.2) rotate(180deg); opacity: 0.3; }
  }

  .card-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    padding: 8px 20px;
    border-radius: 24px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 32px;
    position: relative;
    z-index: 2;
  }

  .amount-showcase {
    display: flex;
    align-items: baseline;
    justify-content: center;
    margin-bottom: 32px;
    position: relative;
    z-index: 2;
  }

  .currency {
    font-size: 2.5rem;
    font-weight: 600;
    margin-right: 8px;
  }

  .amount {
    font-size: 5rem;
    font-weight: 700;
    line-height: 1;
  }

  .period {
    font-size: 1.5rem;
    opacity: 0.9;
    margin-left: 8px;
  }

  .guarantee-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(10px);
    padding: 16px 24px;
    border-radius: 16px;
    margin-bottom: 32px;
    font-weight: 600;
    font-size: 1.05rem;
    position: relative;
    z-index: 2;
  }

  .floating-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
    position: relative;
    z-index: 2;
  }

  .floating-stat {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    padding: 20px;
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 8px;
  }

  .stat-label {
    display: block;
    font-size: 0.85rem;
    opacity: 0.9;
  }

  /* Content Side */
  .content-side {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .section-label {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    width: fit-content;
    background: rgba(92, 176, 214, 0.15);
    color: var(--secondary);
    padding: 8px 18px;
    border-radius: 24px;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .content-side h2 {
    font-size: 2.75rem;
    color: var(--primary);
    line-height: 1.2;
    margin: 0;
  }

  .lead-text {
    font-size: 1.15rem;
    line-height: 1.7;
    color: var(--text);
    margin: 0;
  }

  .lead-text strong {
    color: var(--primary);
    font-weight: 600;
  }

  .benefits-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin: 8px 0;
  }

  .benefit-item {
    display: flex;
    gap: 16px;
    align-items: flex-start;
  }

  .benefit-item svg {
    flex-shrink: 0;
    color: var(--secondary);
    background: rgba(92, 176, 214, 0.15);
    padding: 6px;
    border-radius: 8px;
    margin-top: 2px;
  }

  .benefit-item strong {
    display: block;
    color: var(--primary);
    font-size: 1.05rem;
    margin-bottom: 4px;
  }

  .benefit-item p {
    margin: 0;
    font-size: 0.95rem;
    color: var(--text);
    line-height: 1.5;
  }

  .cta-area {
    display: flex;
    gap: 16px;
    margin-top: 8px;
    flex-wrap: wrap;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 18px 32px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1.05rem;
    transition: all 0.3s;
    box-shadow: 0 4px 16px rgba(12, 68, 99, 0.2);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(12, 68, 99, 0.3);
    gap: 14px;
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    padding: 18px 32px;
    background: white;
    color: var(--primary);
    border: 2px solid var(--primary);
    border-radius: 12px;
    font-weight: 600;
    font-size: 1.05rem;
    transition: all 0.3s;
  }

  .btn-secondary:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-2px);
  }

  .info-note {
    display: flex;
    gap: 12px;
    padding: 20px 24px;
    background: rgba(92, 176, 214, 0.1);
    border-left: 4px solid var(--secondary);
    border-radius: 12px;
    align-items: flex-start;
  }

  .info-note svg {
    color: var(--secondary);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .info-note p {
    margin: 0;
    font-size: 0.95rem;
    color: var(--text);
    line-height: 1.6;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .content-wrapper {
      grid-template-columns: 1fr;
      gap: 60px;
    }

    .visual-side {
      order: 2;
    }

    .content-side {
      order: 1;
    }

    .content-side h2 {
      font-size: 2.25rem;
    }

    .main-visual-card {
      max-width: 600px;
      margin: 0 auto;
    }
  }

  @media (max-width: 768px) {
    .guaranteed-rent-preview {
      padding: 80px 20px;
    }

    .content-wrapper {
      gap: 50px;
    }

    .content-side h2 {
      font-size: 2rem;
    }

    .lead-text {
      font-size: 1.05rem;
    }

    .main-visual-card {
      padding: 40px 28px;
    }

    .amount {
      font-size: 3.5rem;
    }

    .currency {
      font-size: 2rem;
    }

    .period {
      font-size: 1.25rem;
    }

    .cta-area {
      flex-direction: column;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
      justify-content: center;
    }

    .floating-stats {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .content-side h2 {
      font-size: 1.75rem;
    }

    .amount {
      font-size: 3rem;
    }

    .stat-value {
      font-size: 1.75rem;
    }
  }
  .amount {
  transition: opacity 0.4s ease, transform 0.4s ease;
}

.amount-note {
  text-align: center;
  font-size: 0.85rem;
  opacity: 0.85;
  margin: 12px 0 32px 0;
  font-style: italic;
  position: relative;
  z-index: 2;
}
  
</style>
<script>
  class DynamicAmount {
    private amounts: string[];
    private currentIndex: number = 1;
    private amountElement: HTMLElement | null;
    private intervalId: number | null = null;

    constructor() {
      this.amountElement = document.getElementById('dynamicAmount');
      const raw = this.amountElement?.dataset.amounts;
      this.amounts = raw ? JSON.parse(raw) : ['800', '1.200', '1.500', '1.800', '2.200', '2.800', '3.200'];
      this.init();
    }

    init() {
      if (!this.amountElement) return;

      // Inicia a animação após 2 segundos
      setTimeout(() => {
        this.startAnimation();
      }, 2000);
    }

    startAnimation() {
      this.intervalId = window.setInterval(() => {
        this.changeAmount();
      }, 2000); // Muda a cada 1,5 segundos
    }

    changeAmount() {
      if (!this.amountElement) return;

      // Fade out + move up
      this.amountElement.style.opacity = '0';
      this.amountElement.style.transform = 'translateY(-15px)';

      setTimeout(() => {
        // Muda o valor
        this.currentIndex = (this.currentIndex + 1) % this.amounts.length;
        this.amountElement!.textContent = this.amounts[this.currentIndex];

        // Fade in + move down
        this.amountElement!.style.transform = 'translateY(15px)';
        
        setTimeout(() => {
          this.amountElement!.style.opacity = '1';
          this.amountElement!.style.transform = 'translateY(0)';
        }, 50);
      }, 400);
    }

    destroy() {
      if (this.intervalId) {
        clearInterval(this.intervalId);
      }
    }
  }

  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      new DynamicAmount();
    });
  }
</script>