---
import { iconMap } from '../icons/iconMap';

interface BenefitRaw {
  benefit_icon_key?: string;
  benefit_title?: string;
  benefit_description?: string;
}

interface Benefit {
  icon_key?: string;
  title?: string;
  description?: string;
}

interface Props {
  title?: string;
  benefits?: BenefitRaw[];
}

// pegar ícone do mapa com fallback
function getIcon(key: string | undefined, fallback: keyof typeof iconMap) {
  if (key && iconMap[key]) {
    return iconMap[key as keyof typeof iconMap];
  }
  return iconMap[fallback];
}

const {
  title = 'Porquê Escolher a Gestão da Host Wise?',
  benefits: rawBenefits = [],
} = Astro.props as Props;

// FALLBACK se ACF estiver vazio
const fallbackBenefits: Benefit[] = [
  {
    icon_key: 'passiveIncome',
    title: 'Rendimento Passivo e Tranquilo',
    description:
      'Gerir uma propriedade pode ser exigente, mas com a gestão de alojamento local da Host Wise, os proprietários podem desfrutar de um rendimento passivo sem preocupações.',
  },
  {
    icon_key: 'rentability',
    title: 'Maximização da Rentabilidade',
    description:
      'Ajustamos preços de forma inteligente, aumentamos a taxa de ocupação e posicionamos o seu alojamento para obter mais reservas e lucro.',
  },
  {
    icon_key: 'integratedManagement',
    title: 'Gestão 100% Integrada',
    description:
      'Cuidamos de comunicação com hóspedes, limpeza, manutenção, anúncios em plataformas e operação diária, para que não tenha preocupações.',
  },
];

const benefits: Benefit[] =
  rawBenefits.length
    ? rawBenefits.map((b) => ({
        icon_key: b.benefit_icon_key,
        title: b.benefit_title,
        description: b.benefit_description,
      }))
    : fallbackBenefits;
---

<section class="benefits-cards-section">
  <div class="container">
    <div class="section-header">
      <h2>{title}</h2>
    </div>

    <div class="cards-grid">
      {benefits.map((benefit, index) => {
        const icon = getIcon(
          benefit.icon_key,
          index === 1
            ? 'chartLine'
            : index === 2
            ? 'grid'
            : 'dollar'
        );

        return (
          <div class="benefit-card" data-index={index}>
            <div class="card-icon" set:html={icon} />

            <h3>{benefit.title}</h3>

            {benefit.description && (
              <p set:html={benefit.description}></p>
            )}
          </div>
        );
      })}
    </div>
  </div>
</section>


<style>
  .benefits-cards-section {
    padding: 100px 20px;
    background: white;
    position: relative;
    overflow: hidden;
  }

  /* Background pattern */
  .benefits-cards-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(circle at 1px 1px, rgba(92, 176, 214, 0.08) 1px, transparent 0);
    background-size: 40px 40px;
    pointer-events: none;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-header h2 {
    font-size: 3rem;
    font-weight: 800;
    color: var(--primary);
    line-height: 1.2;
    margin: 0;
    animation: fadeInUp 0.6s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Cards Grid */
  .cards-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;
  }

  @media (min-width: 768px) {
    .cards-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 24px;
    }
  }

  /* Benefit Card */
  .benefit-card {
    background: white;
    border-radius: 16px;
    padding: 40px 32px;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 20px rgba(12, 68, 99, 0.08);
    opacity: 0;
    transform: translateY(30px);
    animation: slideInUp 0.6s ease-out forwards;
  }

  .benefit-card[data-index="0"] {
    animation-delay: 0.1s;
  }

  .benefit-card[data-index="1"] {
    animation-delay: 0.2s;
  }

  .benefit-card[data-index="2"] {
    animation-delay: 0.3s;
  }

  @keyframes slideInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .benefit-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(12, 68, 99, 0.15);
  }

  /* Card Icon */
  .card-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 28px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    padding: 15px;
  }

  .card-icon svg {
    width: 28px;
    height: 28px;
  }

  .benefit-card:hover .card-icon {
    transform: scale(1.1) rotate(5deg);
  }

  /* Card Title */
  .benefit-card h3 {
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 16px;
    line-height: 1.3;
  }

  /* Card Description */
  .benefit-card p {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--text);
    opacity: 0.85;
    margin: 0;
    text-align: left;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .benefits-cards-section {
      padding: 80px 20px;
    }

    .section-header h2 {
      font-size: 2.5rem;
    }

    .section-header {
      margin-bottom: 50px;
    }
  }

  @media (max-width: 768px) {
    .benefits-cards-section {
      padding: 60px 20px;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .section-header {
      margin-bottom: 40px;
    }

    .benefit-card {
      padding: 32px 24px;
    }

    .benefit-card h3 {
      font-size: 1.25rem;
    }

    .benefit-card p {
      font-size: 0.95rem;
    }

    .card-icon {
      width: 56px;
      height: 56px;
      margin-bottom: 24px;
    }

    .card-icon svg {
      width: 24px;
      height: 24px;
    }
  }

  @media (max-width: 480px) {
    .section-header h2 {
      font-size: 1.75rem;
    }

    .benefit-card {
      padding: 28px 20px;
    }
  }
</style>
