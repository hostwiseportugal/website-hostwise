      margin-bottom: 40px;
    }

    /* Mobile Navigation - Stack Vertical */
    .nav-container {
      flex-direction: column;
      width: 100%;
      max-width: 500px;
      gap: 8px;
    }

    .nav-background {
      display: none; /* Remove o background animado em mobile */
    }

    .nav-tab {
      width: 100%;
      justify-content: flex-start;
      padding: 16px 20px;
      background: white;
      border: 2px solid var(--gray-light);
      border-radius: 12px;
      color: var(--text);
    }

    .nav-tab.active {
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
      border-color: var(--secondary);
      color: white;
    }

    .nav-tab.active svg {
      color: white;
    }

    .nav-tab:not(.active) svg {
      color: var(--primary);
    }

    .nav-tab:not(.active):hover {
      background: var(--blue-light);
      border-color: var(--secondary);
    }

    /* Content */
    .service-layout {
      gap: 40px;
    }

    .service-text h2 {
      font-size: 1.75rem;
    }

    .service-text p {
      font-size: 1rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .feature-item {
      font-size: 0.9rem;
    }

    .image-badge {
      bottom: 20px;
      right: 20px;
      padding: 16px 20px;
    }

    .badge-number {
      font-size: 1.5rem;
    }

    .badge-text {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .services-switch {
      padding: 80px 16px 60px;
    }

    .nav-container {
      padding: 6px;
    }

    .nav-tab {
      padding: 14px 16px;
      font-size: 0.9rem;
    }

    .service-text h2 {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  class ServicesSwitch {
    private tabs: NodeListOf<HTMLElement>;
    private sections: NodeListOf<HTMLElement>;
    private background: HTMLElement;

    constructor() {
      this.tabs = document.querySelectorAll('.nav-tab');
      this.sections = document.querySelectorAll('.service-section');
      this.background = document.getElementById('navBackground')!;

      this.init();
    }

    init() {
      // Set initial background position
      const activeTab = document.querySelector('.nav-tab.active') as HTMLElement;
      if (activeTab) {
        this.updateBackground(activeTab);
      }

      // Add click handlers
      this.tabs.forEach(tab => {
        tab.addEventListener('click', () => this.switchTab(tab));
      });

      // Update background on resize
      window.addEventListener('resize', () => {
        const activeTab = document.querySelector('.nav-tab.active') as HTMLElement;
        if (activeTab) {
          this.updateBackground(activeTab);
        }
      });
    }

    switchTab(clickedTab: HTMLElement) {
      const targetId = clickedTab.dataset.tab;

      // Update tabs
      this.tabs.forEach(tab => tab.classList.remove('active'));
      clickedTab.classList.add('active');

      // Update sections
      this.sections.forEach(section => section.classList.remove('active'));
      const targetSection = document.querySelector(`[data-content="${targetId}"]`);
      targetSection?.classList.add('active');

      // Update background
      this.updateBackground(clickedTab);
    }

    updateBackground(tab: HTMLElement) {
      const offsetLeft = tab.offsetLeft;
      const width = tab.offsetWidth;

      this.background.style.left = `${offsetLeft}px`;
      this.background.style.width = `${width}px`;
    }
  }

  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      new ServicesSwitch();
    });
  }
</script>