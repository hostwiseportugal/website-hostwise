---
interface Benefit {
  title: string;
  description: string;
  color: string;
}

interface Props {
  benefits: Benefit[];
  badgeText: string;
  heading: string;
  subheading: string;
  hintText?: string;
}

const { benefits, badgeText, heading, subheading, hintText = 'Clique num cart√£o para saber mais' } = Astro.props;
---

<section class="benefits-section">
  <div class="container">
    <div class="benefits-header">
      <span class="section-badge">{badgeText}</span>
      <h2>{heading}</h2>
      <p>{subheading}</p>
      <p class="benefits-hint">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"/>
        </svg>
        {hintText}
      </p>
    </div>

    <div class="benefits-grid" id="benefits">
      {benefits.map((benefit, index) => (
        <div
          class="benefit-card"
          data-index={index + 1}
          data-active="false"
          style={`--benefit-color: ${benefit.color}`}
        >
          <div class="benefit-content">
            <div class="benefit-content-inner">
              <div class="benefit-badge">{benefit.title}</div>
              <p class="benefit-description">{benefit.description}</p>
            </div>

            <div class="benefit-compact">
              <span class="benefit-square"></span>
              <h3>{benefit.title}</h3>
              <svg class="expand-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" width="20" height="20">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Benefits Section */
  .benefits-section {
    padding: 100px 20px;
    background: white;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .benefits-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 60px;
  }

  .section-badge {
    display: inline-block;
    background: rgba(92, 176, 214, 0.15);
    color: var(--secondary);
    padding: 8px 20px;
    border-radius: 24px;
    font-weight: 700;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 16px;
  }

  .benefits-header h2 {
    font-size: 3rem;
    color: var(--primary);
    margin-bottom: 16px;
    line-height: 1.2;
  }

  .benefits-header p {
    font-size: 1.15rem;
    color: var(--text);
    opacity: 0.85;
    line-height: 1.7;
  }

  .benefits-hint {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem !important;
    color: var(--secondary) !important;
    opacity: 1 !important;
    margin-top: 12px;
    font-weight: 500;
  }

  .benefits-hint svg {
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .benefits-hint {
      display: none;
    }
  }

  /* Benefits Grid */
  .benefits-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
  }

  @media (min-width: 768px) {
    .benefits-grid {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: auto auto;
      gap: 20px;
    }
  }

  .benefit-card {
    position: relative;
    background: var(--blue-light);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: 2px solid transparent;
  }

  .benefit-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(12, 68, 99, 0.12);
    border-color: rgba(92, 176, 214, 0.3);
  }

  .benefit-card[data-active="true"] {
    background: white;
    box-shadow: 0 12px 40px rgba(12, 68, 99, 0.15);
    border-color: var(--benefit-color);
  }

  @media (min-width: 768px) {
    .benefit-card {
      grid-row: span 1;
      grid-column: span 1;
    }

    /* Default positions - all 6 cards visible */
    .benefit-card[data-index="1"] { grid-row: 1; grid-column: 1; }
    .benefit-card[data-index="2"] { grid-row: 1; grid-column: 2; }
    .benefit-card[data-index="3"] { grid-row: 1; grid-column: 3; }
    .benefit-card[data-index="4"] { grid-row: 2; grid-column: 1; }
    .benefit-card[data-index="5"] { grid-row: 2; grid-column: 2; }
    .benefit-card[data-index="6"] { grid-row: 2; grid-column: 3; }
  }

  .benefit-content {
    position: relative;
    width: 100%;
  }

  .benefit-content-inner {
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding: 0 32px;
    justify-content: flex-start;
    align-items: flex-start;
    text-align: justify;
    opacity: 0;
    visibility: hidden;
    max-height: 0;
    overflow: hidden;
    transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                padding 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                visibility 0s 0.4s;
  }

  .benefit-card[data-active="true"] .benefit-content-inner {
    opacity: 1;
    visibility: visible;
    max-height: 800px;
    padding: 32px;
    transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                padding 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                visibility 0s 0s;
  }

  .benefit-badge {
    font-size: 0.9rem;
    font-weight: 700;
    border: 1.5px solid var(--benefit-color);
    border-radius: 30px;
    padding: 6px 12px;
    color: var(--benefit-color);
    display: inline-block;
  }

  .benefit-description {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--text);
    margin: 0;
  }

  .benefit-compact {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 16px;
    padding: 20px 24px;
    opacity: 1;
    visibility: visible;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                padding 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                visibility 0s 0s;
  }

  .benefit-card[data-active="true"] .benefit-compact {
    opacity: 0;
    visibility: hidden;
    padding: 0 24px;
    pointer-events: none;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                padding 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                visibility 0s 0.3s;
  }

  .benefit-square {
    display: block;
    width: 8px;
    height: 8px;
    background: var(--benefit-color);
    flex-shrink: 0;
    transition: transform 0.3s, width 0.3s, height 0.3s;
    border-radius: 1px;
  }

  .benefit-card:hover .benefit-square {
    transform: rotate(45deg);
    width: 10px;
    height: 10px;
  }

  .benefit-compact h3 {
    font-size: 1.05rem;
    color: var(--primary);
    margin: 0;
    font-weight: 700;
    line-height: 1.4;
    transition: color 0.3s;
    flex: 1;
  }

  .benefit-card:hover .benefit-compact h3 {
    color: var(--secondary);
  }

  .expand-icon {
    color: var(--benefit-color);
    flex-shrink: 0;
    transition: transform 0.3s, color 0.3s;
    opacity: 0.6;
  }

  .benefit-card:hover .expand-icon {
    opacity: 1;
    transform: translateY(2px);
  }

  @media (min-width: 1024px) {
    .benefit-compact h3 {
      font-size: 1.2rem;
    }
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .benefits-section {
      padding: 80px 20px;
    }

    .benefits-header h2 {
      font-size: 2.5rem;
    }
  }

  @media (max-width: 768px) {
    .benefits-header h2 {
      font-size: 2rem;
    }

    .benefits-header p {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .benefits-header h2 {
      font-size: 1.75rem;
    }
  }
</style>

<script>
  class BenefitsExpander {
    private cards: NodeListOf<HTMLElement>;
    private activeIndex: number = 1;
    private isMobile: boolean = false;

    constructor() {
      this.cards = document.querySelectorAll('.benefit-card');
      this.isMobile = window.innerWidth < 768;
      this.init();
    }

    init() {
      // Set first card as active on desktop
      if (!this.isMobile) {
        this.setActive(this.activeIndex);
      }

      // Add click handlers
      this.cards.forEach((card, index) => {
        card.addEventListener('click', () => {
          const cardIndex = index + 1;

          if (this.isMobile) {
            // Mobile: toggle behavior
            if (card.dataset.active === 'true') {
              card.dataset.active = 'false';
            } else {
              this.setActive(cardIndex);
            }
          } else {
            // Desktop: always switch
            this.setActive(cardIndex);
          }
        });
      });

      // Handle resize
      let resizeTimer: number;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimer);
        resizeTimer = window.setTimeout(() => {
          const wasMobile = this.isMobile;
          this.isMobile = window.innerWidth < 768;

          if (!this.isMobile && wasMobile) {
            // Switched to desktop
            if (!this.hasActive()) {
              this.setActive(1);
            }
          } else if (this.isMobile && !wasMobile) {
            // Switched to mobile - close all
            this.cards.forEach(card => card.dataset.active = 'false');
          }
        }, 250);
      });
    }

    setActive(index: number) {
      this.activeIndex = index;
      this.cards.forEach(card => card.dataset.active = 'false');
      const targetCard = document.querySelector(`.benefit-card[data-index="${index}"]`) as HTMLElement;
      if (targetCard) {
        targetCard.dataset.active = 'true';
      }
    }

    hasActive(): boolean {
      return Array.from(this.cards).some(card => card.dataset.active === 'true');
    }
  }

  // Initialize
  document.addEventListener('DOMContentLoaded', () => {
    new BenefitsExpander();
  });
</script>
