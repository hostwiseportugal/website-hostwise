---
interface Stat {
  label: string;
  value: string;
}

interface Props {
  title?: string;
  description?: string;
  propertyName?: string;
  propertyLocation?: string;
  badge?: string;
  stats?: Stat[];
  images?: string[];
}

const {
  title = 'Caso de Estudo',
  description = 'Conheça os resultados de um dos edifícios que gerimos. Números reais que demonstram o impacto da nossa abordagem integrada na rentabilidade e eficiência operacional.',
  propertyName = 'Fervença Boutique Palace',
  propertyLocation = 'Porto',
  badge = 'Em Gestão',
  stats = [
    { label: 'Unidades', value: '21' },
    { label: 'Receita Anual', value: '€480K' },
    { label: 'Preço Médio', value: '€125' },
    { label: 'Ocupação', value: '87%' },
    { label: 'Rentabilidade', value: '12.4%' },
  ],
  images = [
    '/images/fervenca-palace-fachada-exterior.webp',
    '/images/fervenca-palace-fachada-interior.webp',
    '/images/sala-apartamento-fervenca-boutique-palace.webp',
  ],
} = Astro.props;
---

<section class="case-study-section">
  <div class="container">
    <div class="section-header">
      <h2>{title}</h2>
      <p>{description}</p>
    </div>

    <div class="case-study-card">
      <div class="property-info">
        <span class="property-badge">{badge}</span>
        <h3 class="property-name">{propertyName}</h3>
        <p class="property-location">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
            <circle cx="12" cy="10" r="3"/>
          </svg>
          {propertyLocation}
        </p>
      </div>

      <div class="images-grid">
        {images.map((image, index) => (
          <div class={`image-item ${index === 0 ? 'main' : ''}`}>
            <img src={image} alt={`${propertyName} - Imagem ${index + 1}`} loading="lazy" />
          </div>
        ))}
      </div>

      <div class="stats-grid">
        {stats.map((stat, index) => (
          <div class="stat-item" style={`--delay: ${index * 0.1}s`}>
            <span class="stat-value">{stat.value}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .case-study-section {
    padding: 100px 20px;
    background: white;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-header h2 {
    font-size: 2.75rem;
    font-weight: 800;
    color: var(--primary);
    margin-bottom: 20px;
    letter-spacing: -0.02em;
  }

  .section-header p {
    font-size: 1.15rem;
    color: var(--text);
    line-height: 1.7;
    opacity: 0.85;
    max-width: 700px;
    margin: 0 auto;
  }

  .case-study-card {
    background: white;
    border-radius: 24px;
    padding: 48px;
    box-shadow: 0 16px 64px rgba(12, 68, 99, 0.1);
    border: 2px solid var(--gray-light);
  }

  .property-info {
    text-align: center;
    margin-bottom: 40px;
  }

  .property-badge {
    display: inline-block;
    font-size: 0.85rem;
    font-weight: 700;
    color: white;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    padding: 8px 20px;
    border-radius: 30px;
    margin-bottom: 16px;
  }

  .property-name {
    font-size: 2rem;
    font-weight: 800;
    color: var(--primary);
    margin: 0 0 12px;
  }

  .property-location {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 1.1rem;
    color: var(--text);
    opacity: 0.8;
    margin: 0;
  }

  .property-location svg {
    width: 20px;
    height: 20px;
    color: var(--secondary);
  }

  .images-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 16px;
    margin-bottom: 40px;
    height: 400px;
  }

  .image-item {
    border-radius: 16px;
    overflow: hidden;
  }

  .image-item.main {
    grid-row: span 2;
  }

  .image-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .image-item:hover img {
    transform: scale(1.05);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 24px;
  }

  .stat-item {
    text-align: center;
    padding: 24px 16px;
    background: var(--blue-light);
    border-radius: 16px;
    animation: fadeInUp 0.5s ease-out backwards;
    animation-delay: var(--delay);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .stat-value {
    display: block;
    font-size: 2rem;
    font-weight: 800;
    color: var(--primary);
    line-height: 1.2;
    margin-bottom: 8px;
  }

  .stat-label {
    display: block;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--text);
    opacity: 0.75;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .stats-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .stat-item:nth-child(4),
    .stat-item:nth-child(5) {
      grid-column: span 1;
    }
  }

  @media (max-width: 768px) {
    .case-study-section {
      padding: 80px 20px;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .section-header p {
      font-size: 1.05rem;
    }

    .case-study-card {
      padding: 32px 24px;
    }

    .property-name {
      font-size: 1.5rem;
    }

    .images-grid {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
      height: auto;
    }

    .image-item.main {
      grid-row: span 1;
    }

    .image-item {
      aspect-ratio: 16/10;
    }

    .image-item:not(.main) {
      display: none;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    .stat-item:last-child {
      grid-column: span 2;
    }

    .stat-value {
      font-size: 1.5rem;
    }

    .stat-label {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .section-header h2 {
      font-size: 1.75rem;
    }

    .case-study-card {
      padding: 24px 20px;
    }

    .stat-item {
      padding: 20px 12px;
    }

    .stat-value {
      font-size: 1.35rem;
    }
  }
</style>
