---
import OptimizedImage from './OptimizedImage.astro';
import type { ImageMetadata } from 'astro';
import natixisLogo from '../assets/images/partners/natixis-logo.webp';
import atlantidaLogo from '../assets/images/partners/atlantida-wta-logo.webp';

interface WPImage {
  url?: string;
  source_url?: string;
  alt?: string;
}

interface PartnerItem {
  logo_image?: WPImage | ImageMetadata | string;
  logo_alt?: string;
  logo_url?: string;
}

interface PartnersProps {
  title?: string;
  partners?: PartnerItem[];
}

function normalizeImage(
  img: WPImage | ImageMetadata | string | undefined,
  fallback: string,
  alt: string
): { src: ImageMetadata | string; alt: string } {
  if (!img) return { src: fallback, alt };

  // ImageMetadata (imported local image)
  if (typeof img === 'object' && 'src' in img && 'width' in img) {
    return { src: img as ImageMetadata, alt };
  }

  if (typeof img === 'string') {
    return { src: img, alt };
  }

  // WPImage
  return {
    src: img.url || img.source_url || fallback,
    alt: img.alt || alt,
  };
}

const {
  title = 'Os Nossos Parceiros de Negócios',
  partners = [],
} = Astro.props as PartnersProps;

// FALLBACK logos caso não venham do ACF
const defaultPartners: PartnerItem[] =
  partners.length
    ? partners
    : [
        { logo_image: '/images/partners/farfetch-logo.svg', logo_alt: 'Farfetch' },
        { logo_image: natixisLogo, logo_alt: 'Natixis' },
        { logo_image: atlantidaLogo, logo_alt: 'Atlântida WTA' },
        { logo_image: '/images/partners/apartool-logo.svg', logo_alt: 'Apartool' },
        { logo_image: '/images/partners/revolut-logo.svg', logo_alt: 'Revolut' },
        { logo_image: '/images/partners/devexperts-logo.svg', logo_alt: 'DevExperts' },
        { logo_image: '/images/partners/exclusive-worldwide-logo.svg', logo_alt: 'Exclusive Worldwide' },
        { logo_image: '/images/partners/plateform-logo.svg', logo_alt: 'Plateform' },
      ];

// duplicar para marquee infinito
const marqueePartners = [...defaultPartners, ...defaultPartners];
---

<section class="partners-marquee">
  <div class="container">
    <h2 class="partners-title">{title}</h2>

    <div class="marquee-wrapper">
      <div class="marquee-content">

        {marqueePartners.map((partner) => {
          const img = normalizeImage(
            partner.logo_image,
            '/images/partners/fallback-partner.svg',
            partner.logo_alt || 'Partner logo'
          );

          const WrapperTag = partner.logo_url ? 'a' : 'div';

          return (
            <div class="marquee-item">
              <WrapperTag
                {...(partner.logo_url ? { href: partner.logo_url, target: '_blank', rel: 'noopener noreferrer' } : {})}
              >
                <OptimizedImage src={img.src} alt={img.alt} loading="lazy" />
              </WrapperTag>
            </div>
          );
        })}

      </div>
    </div>
  </div>
</section>

<style>
  .partners-marquee {
    padding: 80px 0;
    background: var(--gray-light);
    overflow: hidden;
  }

  .partners-title {
    font-size: 2.5rem;
    color: var(--primary);
    text-align: center;
    margin-bottom: 60px;
  }

  .marquee-wrapper {
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .marquee-content {
    display: flex;
    gap: 80px;
    animation: marquee 10s linear infinite;
    will-change: transform;
  }

  .marquee-item {
    flex-shrink: 0;
    width: 200px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    padding: 24px;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .marquee-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .marquee-item img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    filter: grayscale(100%);
    opacity: 0.7;
    transition: filter 0.3s, opacity 0.3s;
  }

  .marquee-item:hover img {
    filter: grayscale(0%);
    opacity: 1;
  }

  @keyframes marquee {
    0% {
      transform: translateX(5%);
    }
    100% {
      transform: translateX(-70%);
    }
  }

  /* Pause animation on hover */
  .marquee-wrapper:hover .marquee-content {
    animation-play-state: paused;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .partners-title {
      font-size: 2rem;
      margin-bottom: 40px;
    }

    .marquee-content {
      gap: 40px;
      animation: marquee 20s linear infinite;
    }

    .marquee-item {
      width: 150px;
      height: 80px;
      padding: 16px;
    }
  }

  @media (max-width: 640px) {
    .partners-marquee {
      padding: 60px 0;
    }

    .partners-title {
      font-size: 1.75rem;
    }

    .marquee-content {
      gap: 24px;
      animation: marquee 20s linear infinite;
    }

    .marquee-item {
      width: 120px;
      height: 70px;
    }
  }
</style>
