---
import { iconMap } from '../icons/iconMap';
import OptimizedImage from './OptimizedImage.astro';
import type { ImageMetadata } from 'astro';
import { property1, heroDefault } from '../lib/fallback-images';

interface FeatureItem {
  feature_icon?: string;
  feature_title?: string;
  feature_description?: string;
}

interface FeaturesAccordionProps {
  section_title?: string;
  section_subtitle?: string;

  owners_title?: string;
  owners_subtitle?: string;
  owners_image?: ImageMetadata | string;
  owners_features?: FeatureItem[];

  guests_title?: string;
  guests_subtitle?: string;
  guests_image?: ImageMetadata | string;
  guests_features?: FeatureItem[];

  owners_tab_label?: string;
  guests_tab_label?: string;

  cta_label?: string;
  cta_url?: string;
}

const {
  section_title = 'Descubra Como Funcionamos',
  section_subtitle = 'Soluções pensadas tanto para proprietários como para hóspedes.',

  owners_title = 'A Tranquilidade de Saber que Está Tudo Tratado',
  owners_subtitle = 'Gerir um alojamento local exige tempo e conhecimento. Nós tratamos de tudo.',
  owners_image = property1,
  owners_features = [],

  guests_title = 'Acolher Bem é a Nossa Prioridade',
  guests_subtitle = 'Cuidamos de todos os detalhes para uma estadia memorável.',
  guests_image = heroDefault,
  guests_features = [],

  owners_tab_label = 'Gestão da Propriedade',
  guests_tab_label = 'Gestão da Estadia',

  cta_label = 'Receber Proposta Gratuita',
  cta_url = '#contacto'
} = Astro.props as FeaturesAccordionProps;

// fallbacks owners
const defaultOwners = owners_features.length
  ? owners_features
  : [
      {
        feature_icon: 'license',
        feature_title: 'Apoio de Obtenção de Licença AL',
        feature_description:
          'Ajudamos em todo o processo de licenciamento garantindo conformidade legal.'
      },
      {
        feature_icon: 'adOptimization',
        feature_title: 'Criação e Otimização de Anúncios',
        feature_description:
          'Criamos descrições apelativas e estratégias que aumentam reservas.'
      }
    ];

// fallbacks guests
const defaultGuests = guests_features.length
  ? guests_features
  : [
      {
        feature_icon: 'key',
        feature_title: 'Self-Check-in',
        feature_description: 'Entrada sem complicações e com autonomia total.'
      },
      {
        feature_icon: 'support247',
        feature_title: 'Suporte 24/7',
        feature_description: 'Assistência disponível a qualquer hora.'
      }
    ];
---

<section class="features-accordion-section">
  <div class="container">
    <div class="section-header">
      <h2>{section_title}</h2>
      <p>{section_subtitle}</p>
    </div>

    <!-- Toggle Tabs -->
    <div class="toggle-tabs">
      <button class="toggle-tab active" data-tab="owners">
        {owners_tab_label}
      </button>
      <button class="toggle-tab" data-tab="guests">
        {guests_tab_label}
      </button>
    </div>

    <div class="features-layout">
      <!-- Image Sidebar -->
      <div class="image-sidebar">
        <div class="image-wrapper sticky-image">
          <div class="owners-img-wrap">
            <OptimizedImage src={owners_image} alt="Host Wise Owners" />
          </div>
          <div class="guests-img-wrap">
            <OptimizedImage src={guests_image} alt="Host Wise Guests" />
          </div>
        </div>

        {cta_label && (
          <div class="intro-cta">
            <a href={cta_url} class="btn-primary-large">
              {cta_label}
            </a>
          </div>
        )}
      </div>

      <!-- Accordion Content -->
      <div class="accordion-content">

        <!-- OWNERS -->
        <div class="tab-content active" data-content="owners">
          <div class="content-intro">
            <h3>{owners_title}</h3>
            <p>{owners_subtitle}</p>
          </div>

          <div class="accordion-wrapper">
            {defaultOwners.map((feature, index) => (
              <div class={`accordion-item ${index === 0 ? 'active' : ''}`}>
                <button class="accordion-header">
                  <div class="header-content">
                    <div class="feature-icon"
                      set:html={iconMap[feature.feature_icon || 'check']} />
                    <h4>{feature.feature_title}</h4>
                  </div>
                  <div class="accordion-arrow" set:html={iconMap.chevronDown} />
                </button>

                <div class="accordion-body">
                  <p>{feature.feature_description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- GUESTS -->
        <div class="tab-content" data-content="guests">
          <div class="content-intro">
            <h3>{guests_title}</h3>
            <p>{guests_subtitle}</p>
          </div>

          <div class="accordion-wrapper">
            {defaultGuests.map((feature, index) => (
              <div class={`accordion-item ${index === 0 ? 'active' : ''}`}>
                <button class="accordion-header">
                  <div class="header-content">
                    <div class="feature-icon"
                      set:html={iconMap[feature.feature_icon || 'check']} />
                    <h4>{feature.feature_title}</h4>
                  </div>

                  <div class="accordion-arrow" set:html={iconMap.chevronDown} />
                </button>

                <div class="accordion-body">
                  <p>{feature.feature_description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

      </div>
    </div>
  </div>
</section>


<style>
  .features-accordion-section {
    padding: 100px 20px;
    background: white;
    overflow: visible;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    box-sizing: border-box;
    padding: 0 40px;
    overflow: visible;
  }

  .section-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 50px;
  }

  .section-header h2 {
    font-size: 3rem;
    color: var(--primary);
    margin-bottom: 16px;
    line-height: 1.2;
  }

  .section-header p {
    font-size: 1.15rem;
    color: var(--text);
    opacity: 0.85;
    line-height: 1.7;
  }

  /* Toggle Tabs */
  .toggle-tabs {
    display: flex;
    gap: 12px;
    justify-content: center;
    margin-bottom: 60px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 6px;
    border-radius: 50px;
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    border: 2px solid var(--gray-light);
  }

  .toggle-tab {
    padding: 12px 32px;
    border: none;
    background: transparent;
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    color: var(--text);
  }

  .toggle-tab.active {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    box-shadow: 0 4px 12px rgba(12, 68, 99, 0.2);
  }

  /* Features Layout */
  .features-layout {
    display: grid;
    grid-template-columns: 40% 1fr;
    gap: 60px;
    align-items: flex-start;
    box-sizing: border-box;
  }

  /* Image Sidebar */
  .image-sidebar {
  position: relative;
  height: auto;
  min-height: 600px;
  }

  /* Accordion Content */
  .accordion-content {
    min-width: 0;
    max-width: 100%;
    box-sizing: border-box;
  }

  .sticky-image {
  position: sticky;
  top: 10px;
  height: fit-content;
  z-index: 1;
  }

  .image-wrapper {
  position: relative;
  width: 100%;
  height: auto;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .owners-img-wrap {
    position: relative;
    opacity: 1;
    transform: scale(1);
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  .owners-img-wrap :global(img) {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 16px;
  }

  .guests-img-wrap {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transform: scale(0.95);
    transition: opacity 0.5s ease, transform 0.5s ease;
    overflow: hidden;
  }

  .guests-img-wrap :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Show guests image when guests tab is active */
  .features-accordion-section:has(.toggle-tab[data-tab="guests"].active) .guests-img-wrap {
    opacity: 1;
    transform: scale(1);
  }

  .features-accordion-section:has(.toggle-tab[data-tab="guests"].active) .owners-img-wrap {
    opacity: 0;
    transform: scale(0.95);
  }

  /* Tab Content */
  .tab-content {
    display: none;
    animation: fadeIn 0.5s ease;
    box-sizing: border-box;
  }

  .tab-content.active {
    display: block;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .content-intro {
    margin-bottom: 32px;
  }

  .content-intro h3 {
    font-size: 2rem;
    color: var(--primary);
    margin-bottom: 12px;
  }

  .content-intro p {
    font-size: 1.1rem;
    color: var(--text);
    opacity: 0.85;
    line-height: 1.6;
  }

  /* Accordion */
  .accordion-wrapper {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 60px;
    max-width: 100%;
    box-sizing: border-box;
  }

  .accordion-item {
    border: 2px solid var(--gray-light);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    background: white;
    box-sizing: border-box;
  }

  .accordion-item.active {
    background: linear-gradient(135deg, rgba(92, 176, 214, 0.05) 0%, rgba(12, 68, 99, 0.02) 100%);
    border-color: var(--secondary);
  }

  .accordion-header {
    width: 100%;
    padding: 24px;
    background: transparent;
    border: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    transition: all 0.3s;
    text-align: left;
    box-sizing: border-box;
  }

  .accordion-item:hover .accordion-header {
    background: rgba(92, 176, 214, 0.03);
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: 16px;
    flex: 1;
    min-width: 0;
  }

  .feature-icon {
    width: 48px;
    height: 48px;
    background: var(--blue-light);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--secondary);
    flex-shrink: 0;
    transition: all 0.3s;
    padding: 10px;
  }

  .feature-icon svg {
    width: 24px;
    height: 24px;
  }

  .accordion-item.active .feature-icon {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
  }

  .accordion-header h4 {
    font-size: 1.25rem;
    color: var(--primary);
    margin: 0;
    font-weight: 600;
    word-wrap: break-word;
  }

  .accordion-arrow {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--secondary);
    transition: transform 0.3s;
    flex-shrink: 0;
  }

  .accordion-arrow svg {
    width: 20px;
    height: 20px;
  }

  .accordion-item.active .accordion-arrow {
    transform: rotate(180deg);
  }

  .accordion-body {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease, padding 0.4s ease;
    box-sizing: border-box;
  }

  .accordion-item.active .accordion-body {
    max-height: 300px;
    padding: 0 24px 24px 88px;
  }

  .accordion-body p {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--text);
    margin: 0;
    opacity: 0.9;
    word-wrap: break-word;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .features-accordion-section {
      padding: 80px 20px;
    }

    .section-header h2 {
      font-size: 2.5rem;
    }

    .features-layout {
      grid-template-columns: 1fr;
      gap: 50px;
    }

    .sticky-image {
      position: relative;
      top: 0;
    }
  }

  @media (max-width: 768px) {
    .features-accordion-section {
      padding: 60px 20px;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .section-header p {
      font-size: 1rem;
    }

    .toggle-tabs {
      width: 100%;
      padding: 4px;
      gap: 4px;
    }

    .toggle-tab {
      flex: 1;
      padding: 12px 20px;
      font-size: 0.95rem;
    }

    .content-intro h3 {
      font-size: 1.75rem;
    }

    .content-intro p {
      font-size: 1rem;
    }

    .accordion-header {
      padding: 20px;
    }

    .header-content {
      gap: 12px;
    }

    .feature-icon {
      width: 40px;
      height: 40px;
    }

    .accordion-header h4 {
      font-size: 1.1rem;
    }

    .accordion-item.active .accordion-body {
      padding: 0 20px 20px 72px;
    }

    .accordion-body p {
      font-size: 0.95rem;
    }
  }

  @media (max-width: 480px) {
    .section-header h2 {
      font-size: 1.75rem;
    }

    .toggle-tab {
      padding: 10px 16px;
      font-size: 0.9rem;
    }

    .content-intro h3 {
      font-size: 1.5rem;
    }

    .accordion-header {
      padding: 16px;
    }

    .feature-icon {
      width: 36px;
      height: 36px;
    }

    .accordion-header h4 {
      font-size: 1rem;
    }

    .accordion-item.active .accordion-body {
      padding: 0 16px 16px 16px;
    }
  }

  .intro-cta {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 58px;
  }

  .btn-primary-large {
    padding: 18px 36px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    transition: all 0.3s;
    box-shadow: 0 4px 16px rgba(12, 68, 99, 0.2);
  }

  .btn-primary-large:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(12, 68, 99, 0.3);
  }
</style>

<script>
  class FeaturesAccordion {
    private tabs: NodeListOf<HTMLElement>;
    private tabContents: NodeListOf<HTMLElement>;
    private accordionHeaders: NodeListOf<HTMLElement>;

    constructor() {
      this.tabs = document.querySelectorAll('.features-accordion-section .toggle-tab');
      this.tabContents = document.querySelectorAll('.features-accordion-section .tab-content');
      this.accordionHeaders = document.querySelectorAll('.features-accordion-section .accordion-header');

      this.init();
    }

    init() {
      // Tab switching
      this.tabs.forEach(tab => {
        tab.addEventListener('click', () => {
          const target = tab.dataset.tab;
          this.switchTab(target!);
        });
      });

      // Accordion functionality
      this.accordionHeaders.forEach(header => {
        header.addEventListener('click', () => {
          const item = header.parentElement;
          const isActive = item?.classList.contains('active');

          // Close all items in the same wrapper
          const wrapper = item?.closest('.accordion-wrapper');
          wrapper?.querySelectorAll('.accordion-item').forEach(i => {
            i.classList.remove('active');
          });

          // Toggle current item
          if (!isActive) {
            item?.classList.add('active');
          }
        });
      });
    }

    switchTab(target: string) {
      this.tabs.forEach(t => t.classList.remove('active'));
      this.tabContents.forEach(c => c.classList.remove('active'));

      const activeTab = document.querySelector(`.features-accordion-section .toggle-tab[data-tab="${target}"]`);
      const activeContent = document.querySelector(`.features-accordion-section .tab-content[data-content="${target}"]`);

      activeTab?.classList.add('active');
      activeContent?.classList.add('active');
    }
  }

  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      new FeaturesAccordion();
    });
  }
</script>