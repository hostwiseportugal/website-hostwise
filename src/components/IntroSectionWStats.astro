---
interface Stat {
  prefix?: string;
  number?: number | string;
  suffix?: string;
  label?: string;
}

interface IntroWithStatsProps {
  title?: string;
  paragraphs?: { paragraph?: string }[];
  ctaLabel?: string;
  ctaUrl?: string;
  stats?: Stat[];
}

const {
  title = 'Soluções Personalizadas para Cada Tipo de Ativo e Investidor',

  paragraphs = [],

  ctaLabel = 'Receber Proposta Gratuita',
  ctaUrl = '#contacto',

  stats = [],
} = Astro.props as IntroWithStatsProps;

// fallback texto
const defaultParagraphs =
  paragraphs?.length
    ? paragraphs
    : [
        {
          paragraph:
            'Quer tenha um apartamento, um edifício inteiro, ou um portfolio de ativos hoteleiros, oferecemos gestão profissional que maximiza rentabilidade e valorização. Três serviços distintos para três tipos de ativo – cada um com a operação, tecnologia e reporting adequados aos seus objetivos. À medida que o seu portfolio cresce, escalamos consigo.',
        },
        {
          paragraph:
            'Junte-se a mais de 600 proprietários que confiam na Host Wise para gerar rendimentos passivos de forma profissional e transparente.',
        },
      ];

// fallback stats
const defaultStats: Stat[] = stats?.length
  ? stats
  : [
      { prefix: '+', number: 625, label: 'Propriedades Geridas' },
      { number: 80, suffix: '%', label: 'Taxa de Ocupação Média' },
      { number: 40, suffix: '%', label: 'Aumento Médio de Rentabilidade' },
    ];
---

<section class="intro-section" id="intro-section">
  <div class="container">
    <div class="intro-content">

      <h2 class="intro-title">{title}</h2>

      <div class="intro-text">
        {defaultParagraphs.map((p) => (
          <p set:html={p.paragraph}></p>
        ))}
      </div>

      {ctaLabel && (
        <div class="intro-cta">
          <a href={ctaUrl} class="btn-primary-large">
            {ctaLabel}
          </a>
        </div>
      )}

      <div class="intro-stats">
        {defaultStats.map((stat, i) => (
          <>
            <div class="stat-item">
              <span
                class="stat-number"
                data-target={stat.number}
                data-prefix={stat.prefix}
                data-suffix={stat.suffix}
              >
                {`${stat.prefix || ''}${stat.number || 0}${stat.suffix || ''}`}
              </span>

              <span class="stat-label">
                {stat.label || '—'}
              </span>
            </div>

            {i < defaultStats.length - 1 && <div class="stat-divider"></div>}
          </>
        ))}
      </div>

    </div>
  </div>
</section>


<style>
  .intro-section {
    padding: 100px 20px;
    background: linear-gradient(180deg, white 0%, var(--blue-light) 50%, white 100%);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
  }

  .intro-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 40px;
  }

  .intro-title {
    font-size: 4rem;
    line-height: 1;
    color: var(--primary);
    font-weight: 700;
    letter-spacing: -0.02em;
    text-wrap: balance;
    max-width: 800px;
  }

  .intro-text {
    display: flex;
    flex-direction: column;
    gap: 24px;
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text);
  }

  .intro-text p {
    margin: 0;
  }

  .intro-text strong {
    color: var(--primary);
    font-weight: 600;
  }

  .intro-text a {
    color: var(--secondary);
    text-decoration: underline;
    font-weight: 600;
    transition: color 0.3s;
  }

  .intro-text a:hover {
    color: var(--primary);
  }

  .intro-cta {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 8px;
  }

  .btn-primary-large {
    padding: 18px 36px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    transition: all 0.3s;
    box-shadow: 0 4px 16px rgba(12, 68, 99, 0.2);
  }

  .btn-primary-large:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(12, 68, 99, 0.3);
  }

  .btn-secondary-outline {
    padding: 18px 36px;
    background: white;
    color: var(--primary);
    border: 2px solid var(--primary);
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    transition: all 0.3s;
  }

  .btn-secondary-outline:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-2px);
  }

  .intro-stats {
    display: flex;
    align-items: center;
    gap: 40px;
    margin-top: 20px;
    padding: 32px 48px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: center;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--primary);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--text);
    font-weight: 500;
  }

  .stat-divider {
    width: 1px;
    height: 50px;
    background: var(--gray-light);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .intro-title {
      font-size: 3rem;
    }

    .intro-text {
      font-size: 1.0625rem;
    }
  }

  @media (max-width: 768px) {
    .intro-section {
      padding: 80px 20px;
    }

    .intro-title {
      font-size: 2.25rem;
    }

    .intro-text {
      font-size: 1rem;
      gap: 20px;
    }

    .intro-cta {
      flex-direction: column;
      width: 100%;
    }

    .btn-primary-large,
    .btn-secondary-outline {
      width: 100%;
      text-align: center;
    }

    .intro-stats {
      flex-direction: column;
      gap: 28px;
      padding: 28px 24px;
    }

    .stat-divider {
      width: 60px;
      height: 1px;
    }

    .stat-number {
      font-size: 2rem;
    }

    .stat-label {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .intro-title {
      font-size: 1.875rem;
    }

    .btn-primary-large,
    .btn-secondary-outline {
      padding: 16px 28px;
      font-size: 1rem;
    }
  }
</style>

<script>
  class StatsCounter {
    private observer: IntersectionObserver;
    private hasAnimated: boolean = false;

    constructor() {
      this.observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting && !this.hasAnimated) {
              this.hasAnimated = true;
              this.animateStats();
            }
          });
        },
        { threshold: 0.5 }
      );

      this.init();
    }

    init() {
      const statsSection = document.querySelector('.intro-stats');
      if (statsSection) {
        this.observer.observe(statsSection);
      }
    }

    animateStats() {
      const statsSection = document.querySelector('.intro-stats');
      if (!statsSection) return;

      const statNumbers = statsSection.querySelectorAll('.stat-number');

      statNumbers.forEach((stat) => {
        const element = stat as HTMLElement;
        const target = parseFloat(element.dataset.target || '0');
        const prefix = element.dataset.prefix || '';
        const suffix = element.dataset.suffix || '';
        const duration = 2000; // 2 segundos
        const steps = 60;
        const increment = target / steps;
        const stepDuration = duration / steps;

        let current = 0;
        const isDecimal = target % 1 !== 0;

        const timer = setInterval(() => {
          current += increment;

          if (current >= target) {
            current = target;
            clearInterval(timer);
          }

          const value = isDecimal
            ? current.toFixed(1)
            : Math.floor(current).toString();

          // aplica prefixo + número + sufixo
          element.textContent = `${prefix}${value}${suffix}`;
        }, stepDuration);
      });
    }
  }

  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      new StatsCounter();
    });
  }
</script>
