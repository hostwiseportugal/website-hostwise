---
import { Image } from 'astro:assets';
import prrImage from '../assets/images/PRR-financiamento.webp';
import { footerCopy } from "../lib/i18n/footer";
import { getAlternateHref } from "../lib/i18n/routes";

const pathname = Astro.url.pathname;
const isEn = pathname === "/en" || pathname.startsWith("/en/");
const lang = isEn ? "en" : "pt";
const t = footerCopy[lang];

const currentYear = new Date().getFullYear();

// Links dependentes da língua
const links = lang === "en"
  ? {
      service1: "/en/vacation-rental-management",
      service2: "/en/serviced-accommodation",
      service3: "/en/hotel-asset-management",

      porto: "/en/vacation-rental-management/porto",
      algarve: "/en/vacation-rental-management/algarve",
      douro: "/en/vacation-rental-management/douro",
      madeira: "/en/vacation-rental-management/madeira",

      about: "/en/about-hostwise",
      careers: "/en/careers",
      blog: "/en/blog",
      contact: "/en/contact",

      newsletter: "/en/newsletter",
      privacy: "/en/privacy-policy",
      cookies: "/en/cookie-policy",
    }
  : {
      service1: "/gestao-alojamento-local",
      service2: "/gestao-empreendimentos-turisticos",
      service3: "/gestao-ativos-hoteleiros",

      porto: "/gestao-alojamento-local/porto",
      algarve: "/gestao-alojamento-local/algarve",
      douro: "/gestao-alojamento-local/douro",
      madeira: "/gestao-alojamento-local/madeira",

      about: "/sobre-hostwise",
      careers: "/carreiras",
      blog: "/blog",
      contact: "/contacto",

      newsletter: "/newsletter",
      privacy: "/politica-de-privacidade",
      cookies: "/politica-de-cookies",
    };
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-column">
        <img src="/images/logo-white.svg" alt="Host Wise" class="footer-logo" />
        <p>{t.tagline}</p>
        <div class="social-links">
          <a href="https://www.facebook.com/hostwiseonline" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
          <a href="https://www.instagram.com/hostwisept/" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
          <a href="https://www.linkedin.com/company/hostwiseonline/" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
          <a href="https://www.tiktok.com/@hostwiseonline" aria-label="TikTok"><i class="fab fa-tiktok"></i></a>
          <a href="https://open.spotify.com/show/4E3kLNNlrvAfscE1qvZWKJ" aria-label="Spotify"><i class="fab fa-spotify"></i></a>
        </div>
      </div>

      <div class="footer-column">
        <h4>{t.servicesTitle}</h4>
        <ul>
          <li><a href={links.service1}>{t.service1}</a></li>
          <li><a href={links.service2}>{t.service2}</a></li>
          <li><a href={links.service3}>{t.service3}</a></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4>{t.locationsTitle}</h4>
        <ul>
          <li><a href={links.porto}>Porto</a></li>
          <li><a href={links.algarve}>Algarve</a></li>
          <li><a href={links.douro}>Douro</a></li>
          <li><a href={links.madeira}>Madeira</a></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4>{t.companyTitle}</h4>
        <ul>
          <li><a href={links.about}>{t.about}</a></li>
          <li><a href={links.careers}>{t.careers}</a></li>
          <li><a href={links.blog}>{t.blog}</a></li>
          <li><a href={links.contact}>{t.contact}</a></li>
        </ul>
      </div>

      
    </div>
    <div class="newsletter-column">
        <h4>{t.newsletterTitle}</h4>
        <p>{t.newsletterDesc}</p>
        <a href={links.newsletter} class="newsletter-btn">
          {t.newsletterCta}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
            <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
          </svg>
        </a>
      </div>
    <div class="footer-bottom">
      <div class="footer-bottom-row">
        <p class="copyright">&copy; {currentYear} Host Wise. {t.copyright}</p>
        <div class="footer-prr">
          <Image src={prrImage} alt="Financiado pelo PRR - Plano de Recuperação e Resiliência" class="prr-logo" />
        </div>
      </div>
      <div class="footer-links">
        <a href={links.privacy}>{t.privacy}</a>
        <a href={links.cookies}>{t.cookies}</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--primary);
    color: white;
    padding: 60px 0 20px;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    margin-bottom: 40px;
    justify-items: center;
  }

  .footer-logo {
    height: 40px;
    margin-bottom: 20px;
  }

  .footer-column h4 {
    margin-bottom: 20px;
    font-size: 18px;
  }

  .footer-column p {
    opacity: 0.9;
    margin-bottom: 20px;
  }

  .footer-column ul {
    list-style: none;
  }

  .footer-column ul li {
    margin-bottom: 12px;
  }

  .footer-column a {
    opacity: 0.9;
    transition: opacity 0.3s;
  }

  .footer-column a:hover {
    opacity: 1;
  }

  .social-links {
    display: flex;
    gap: 15px;
    font-size: 20px;
  }

  .social-links a {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s;
  }

  .social-links a:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .newsletter-column {
    background: rgba(255, 255, 255, 0.05);
    padding: 30px;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: 30px;
  }

  .newsletter-column h4 {
    margin-bottom: 12px;
  }

  .newsletter-column p {
    font-size: 14px;
    margin-bottom: 20px;
    line-height: 1.6;
  }

  .newsletter-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: white;
    color: var(--primary);
    border-radius: 8px;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s;
    text-decoration: none;
  }

  .newsletter-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
    gap: 12px;
  }

  .newsletter-btn svg {
    transition: transform 0.3s;
  }

  .newsletter-btn:hover svg {
    transform: translateX(4px);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 20px;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .footer-bottom-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
  }

  .footer-bottom .copyright {
    font-size: 14px;
    opacity: 0.9;
  }

  .footer-links {
    display: flex;
    gap: 20px;
    justify-content: center;
  }

  .footer-links a {
    opacity: 0.9;
    font-size: 14px;
  }

  .footer-prr {
    display: flex;
  }

  .prr-logo {
    height: 28px;
    width: auto;
    opacity: 0.95;
  }

  @media (max-width: 768px) {
    .footer-content {
      justify-items: start;
    }

    .footer-bottom-row {
      flex-direction: column;
      text-align: center;
      gap: 16px;
    }

    .footer-bottom-row .footer-prr {
      order: -1;
    }

    .footer-links {
      flex-wrap: wrap;
    }

    .prr-logo {
      height: 40px;
    }
  }
</style>