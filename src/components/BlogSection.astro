---
import OptimizedImage from './OptimizedImage.astro';
import type { ImageMetadata } from 'astro';
import { property1, property2, heroDefault } from '../lib/fallback-images';

interface BlogPost {
  title: string;
  excerpt: string;
  image: ImageMetadata | string;
  categories: string[];
  slug: string;
}

interface BlogSectionProps {
  posts?: BlogPost[];
  limit?: number;
  showAll?: boolean;
  badgeLabel?: string;
  title?: string;
  subtitle?: string;
  ctaLabel?: string;
  ctaUrl?: string;
}

const {
  posts = [],
  limit = 3,
  showAll = false,
  badgeLabel = 'Blog',
  title = 'Insights e Dicas para Proprietários',
  subtitle = 'Mantenha-se atualizado com as últimas tendências, estratégias e novidades do mercado de alojamento local em Portugal.',
  ctaLabel = 'Ver Todos os Artigos',
  ctaUrl = '/blog',
} = Astro.props as BlogSectionProps;

// fallback se ainda não houver posts vindos do WP
const fallbackPosts: BlogPost[] =
  posts.length > 0
    ? posts
    : [
        {
          title: 'Como Maximizar a Rentabilidade do Seu Alojamento Local em 2025',
          excerpt:
            'Descubra estratégias comprovadas para aumentar a ocupação e otimizar preços na época alta.',
          image: property1,
          categories: ['Gestão', 'Rentabilidade'],
          slug: 'maximizar-rentabilidade-alojamento-local-2025',
        },
        {
          title: 'Rentabilidade Garantida vs. Modelo de Comissão: Qual Escolher?',
          excerpt:
            'Comparamos os dois modelos de gestão para ajudá-lo a tomar a melhor decisão para o seu imóvel.',
          image: property2,
          categories: ['Modelos', 'Comparação'],
          slug: 'rentabilidade-garantida-vs-comissao',
        },
        {
          title: '5 Erros Comuns na Gestão de Alojamento Local',
          excerpt:
            'Evite os erros mais frequentes que podem estar a prejudicar o desempenho do seu imóvel.',
          image: heroDefault,
          categories: ['Dicas', 'Gestão'],
          slug: 'erros-comuns-gestao-alojamento-local',
        },
      ];

const displayPosts = showAll
  ? fallbackPosts
  : fallbackPosts.slice(0, limit);
---

<section class="blog-section">
  <div class="container">
    <div class="blog-header">
      <div class="blog-badge">
        <span>{badgeLabel}</span>
      </div>
      <h2>{title}</h2>
      <p>{subtitle}</p>
    </div>

    <div class="blog-grid">
      {displayPosts.map((post, index) => (
        <article class="blog-card" data-index={index}>
          <div class="blog-card-inner">
            <div class="blog-image-wrapper">
              <OptimizedImage src={post.image} alt={post.title} loading={index === 0 ? 'eager' : 'lazy'} />
              <div class="blog-gradient"></div>

              <a href={`/blog/${post.slug}`} class="blog-arrow-btn" aria-label={`Ler artigo: ${post.title}`}>
                <svg class="arrow-out" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" width="20" height="20">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
                <svg class="arrow-in" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" width="20" height="20">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>

            <div class="blog-content">
              {post.categories && post.categories.length > 0 && (
                <div class="blog-categories">
                  {post.categories.map((category) => (
                    <span class="blog-category">{category}</span>
                  ))}
                </div>
              )}

              <a href={`/blog/${post.slug}`} class="blog-link">
                <h3>{post.title}</h3>
              </a>

              <p class="blog-excerpt">{post.excerpt}</p>
            </div>
          </div>
        </article>
      ))}
    </div>

    {!showAll && ctaLabel && (
      <div class="blog-cta">
        <a href={ctaUrl} class="btn-blog-all">
          {ctaLabel}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" width="20" height="20">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    )}
  </div>
</section>


<style>
  .blog-section {
    padding: 100px 20px;
    background: linear-gradient(135deg, #F8FCFF 0%, #fff 100%);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .blog-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 60px;
  }

  .blog-badge {
    display: inline-block;
    position: relative;
    background: var(--secondary);
    color: white;
    padding: 8px 24px;
    border-radius: 8px;
    font-weight: 700;
    font-size: 0.9rem;
    transform: rotate(-2deg);
    margin-bottom: 24px;
  }

  .blog-badge::after {
    content: '';
    position: absolute;
    top: 50%;
    right: -5px;
    transform: translateY(-50%) rotate(140deg);
    width: 10px;
    height: 12px;
    background: white;
    clip-path: polygon(100% 0, 0 100%, 100% 100%);
  }

  .blog-header h2 {
    font-size: 3rem;
    font-weight: 800;
    color: var(--primary);
    line-height: 1.2;
    margin-bottom: 16px;
  }

  .blog-header p {
    font-size: 1.15rem;
    line-height: 1.7;
    color: var(--text);
    opacity: 0.85;
  }

  /* Blog Grid */
  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media (min-width: 768px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .blog-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s forwards;
  }

  .blog-card[data-index="0"] { animation-delay: 0.1s; }
  .blog-card[data-index="1"] { animation-delay: 0.2s; }
  .blog-card[data-index="2"] { animation-delay: 0.3s; }
  .blog-card[data-index="3"] { animation-delay: 0.4s; }
  .blog-card[data-index="4"] { animation-delay: 0.5s; }
  .blog-card[data-index="5"] { animation-delay: 0.6s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .blog-card-inner {
    height: 100%;
    background: white;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(12, 68, 99, 0.08);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .blog-card:hover .blog-card-inner {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(12, 68, 99, 0.15);
  }

  .blog-image-wrapper {
    position: relative;
    height: 280px;
    overflow: hidden;
  }

  .blog-image-wrapper {
  position: relative;
  height: 280px;
  overflow: hidden;
}

/* picture gerado pelo astro */
.blog-image-wrapper :global(picture) {
  display: block;
  width: 100%;
  height: 100%;
}

/* img dentro do picture */
.blog-image-wrapper :global(img) {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

/* hover */
.blog-card:hover .blog-image-wrapper :global(img) {
  transform: scale(1.08);
}


  .blog-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(12, 68, 99, 0.6) 0%, transparent 60%);
    pointer-events: none;
  }

  .blog-arrow-btn {
    position: absolute;
    top: 24px;
    right: 24px;
    width: 56px;
    height: 56px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: rotate(45deg);
    transition: all 0.3s;
    z-index: 10;
  }

  .blog-card:hover .blog-arrow-btn {
    background: var(--secondary);
    transform: rotate(45deg) scale(1.1);
  }

  .blog-arrow-btn svg {
    position: absolute;
    transform: rotate(-45deg) rotate(-90deg);
    color: var(--primary);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .blog-card:hover .blog-arrow-btn svg {
    color: white;
  }

  .arrow-out {
    opacity: 1;
    transform: rotate(-45deg) rotate(-90deg) translateY(0);
  }

  .arrow-in {
    opacity: 0;
    transform: rotate(-45deg) rotate(-90deg) translateY(20px);
  }

  .blog-card:hover .arrow-out {
    opacity: 0;
    transform: rotate(-45deg) rotate(-90deg) translateY(-20px);
  }

  .blog-card:hover .arrow-in {
    opacity: 1;
    transform: rotate(-45deg) rotate(-90deg) translateY(0);
  }

  .blog-content {
    padding: 28px;
  }

  .blog-categories {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    margin-bottom: 16px;
  }

  .blog-category {
    display: inline-block;
    padding: 6px 16px;
    background: rgba(92, 176, 214, 0.1);
    color: var(--secondary);
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .blog-link {
    text-decoration: none;
    display: block;
  }

  .blog-content h3 {
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--primary);
    line-height: 1.3;
    margin-bottom: 12px;
    transition: color 0.3s;
  }

  .blog-card:hover .blog-content h3 {
    color: var(--secondary);
  }

  .blog-excerpt {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text);
    opacity: 0.7;
    margin: 0;
  }

  /* CTA */
  .blog-cta {
    text-align: center;
    margin-top: 60px;
  }

  .btn-blog-all {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 16px 32px;
    background: white;
    color: var(--primary);
    border: 2px solid var(--primary);
    border-radius: 12px;
    font-size: 1.05rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 16px rgba(12, 68, 99, 0.1);
  }

  .btn-blog-all:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(12, 68, 99, 0.2);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .blog-section {
      padding: 80px 20px;
    }

    .blog-header h2 {
      font-size: 2.5rem;
    }
  }

  @media (max-width: 768px) {
    .blog-header h2 {
      font-size: 2rem;
    }

    .blog-header p {
      font-size: 1.05rem;
    }

    .blog-image-wrapper {
      height: 220px;
    }

    .blog-content h3 {
      font-size: 1.25rem;
    }

    .blog-excerpt {
      font-size: 0.95rem;
    }
  }

  @media (max-width: 480px) {
    .blog-header h2 {
      font-size: 1.75rem;
    }

    .blog-arrow-btn {
      width: 48px;
      height: 48px;
    }

    .blog-content {
      padding: 24px;
    }
  }
</style>
