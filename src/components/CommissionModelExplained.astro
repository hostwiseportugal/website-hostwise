      display: none;
    }

    .visual-bar {
      flex-direction: column;
      height: auto;
    }

    .bar-segment {
      padding: 10px;
      width: 100% !important;
    }

    .commission-cta h3 {
      font-size: 1.5rem;
    }

    .commission-cta p {
      font-size: 0.95rem;
    }

    .commission-cta-btn {
      font-size: 1rem;
      padding: 14px 28px;
    }
  }
</style>

<script>
  // Monthly revenue data with full breakdown
  const monthlyData = [
    { month: 1, gross: 3000, hwCommission: 570, platformCommission: 390, vat: 180, cleaning: 240 },   // Jan
    { month: 2, gross: 2800, hwCommission: 532, platformCommission: 364, vat: 168, cleaning: 200 },   // Fev
    { month: 3, gross: 3500, hwCommission: 665, platformCommission: 455, vat: 210, cleaning: 280 },   // Mar
    { month: 4, gross: 3200, hwCommission: 608, platformCommission: 416, vat: 192, cleaning: 260 },   // Abr
    { month: 5, gross: 4000, hwCommission: 760, platformCommission: 520, vat: 240, cleaning: 320 },   // Mai
    { month: 6, gross: 4800, hwCommission: 912, platformCommission: 624, vat: 288, cleaning: 360 },   // Jun
  ];

  function updateRevenue(monthIndex: number) {
    const data = monthlyData[monthIndex - 1];
    const totalDeductions = data.hwCommission + data.platformCommission + data.vat + data.cleaning;
    const net = data.gross - totalDeductions;

    const grossEl = document.getElementById('grossRevenue');
    const hwCommissionEl = document.getElementById('hwCommission');
    const platformCommissionEl = document.getElementById('platformCommission');
    const vatEl = document.getElementById('vatAmount');
    const cleaningEl = document.getElementById('cleaningFee');
    const netEl = document.getElementById('netRevenue');
    const ownerBar = document.getElementById('ownerBar');
    const costsBar = document.getElementById('costsBar');
    const ownerPercentage = document.getElementById('ownerPercentage');
    const costsPercentage = document.getElementById('costsPercentage');

    if (grossEl && hwCommissionEl && platformCommissionEl && vatEl && cleaningEl && netEl && ownerBar && costsBar && ownerPercentage && costsPercentage) {
      // Animate values
      grossEl.textContent = `€${data.gross.toLocaleString()}`;
      hwCommissionEl.textContent = `-€${data.hwCommission.toLocaleString()}`;
      platformCommissionEl.textContent = `-€${data.platformCommission.toLocaleString()}`;
      vatEl.textContent = `-€${data.vat.toLocaleString()}`;
      cleaningEl.textContent = `-€${data.cleaning.toLocaleString()}`;
      netEl.textContent = `€${net.toLocaleString()}`;

      // Update bar
      const ownerPercent = Math.round((net / data.gross) * 100);
      const costsPercent = 100 - ownerPercent;

      ownerBar.style.width = `${ownerPercent}%`;
      costsBar.style.width = `${costsPercent}%`;
      ownerPercentage.textContent = `${ownerPercent}%`;
      costsPercentage.textContent = `${costsPercent}%`;
    }
  }

  // Initialize
  document.addEventListener('DOMContentLoaded', () => {
    const monthButtons = document.querySelectorAll('.month-btn');

    monthButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        // Remove active from all
        monthButtons.forEach(b => b.classList.remove('active'));

        // Add active to clicked
        btn.classList.add('active');

        // Update revenue
        const monthIndex = parseInt(btn.getAttribute('data-month') || '1');
        updateRevenue(monthIndex);
      });
    });

    // Initial load
    updateRevenue(1);
  });
</script>
