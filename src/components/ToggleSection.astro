<style>
  .toggle-section {
    padding: 0;
    background: white;
  }

  .toggle-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 80px 20px;
    display: flex;
    gap: 20px;
    align-items: stretch;
  }

  .toggle-card {
    position: relative;
    flex: 1;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    background: linear-gradient(180deg, rgba(12, 68, 99, 0.95) 0%, rgba(12, 68, 99, 0.85) 100%);
  }

  .toggle-card::before {
    content: '';
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    opacity: 0.8;
    transition: opacity 0.4s ease;
  }

  .toggle-card[data-section="guests"]::before {
    background: linear-gradient(135deg, var(--secondary) 0%, var(--blue) 100%);
  }

  .toggle-card[data-expanded="true"] {
    flex: 1.8;
  }

  .toggle-card[data-expanded="true"]::before {
    opacity: 0.9;
  }

  .card-content {
    position: relative;
    z-index: 2;
    padding: 48px;
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 32px;
    color: white;
  }

  .card-header h3 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 12px;
    color: white;
  }

  .card-header p {
    font-size: 1.15rem;
    line-height: 1.6;
    opacity: 0.95;
    max-width: 500px;
  }

  .benefits-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 16px;
    opacity: 0;
    max-height: 0;
    overflow: hidden;
    transition: all 0.4s ease;
  }

  .toggle-card[data-expanded="true"] .benefits-list {
    opacity: 1;
    max-height: 500px;
    transition-delay: 0.2s;
  }

  .benefits-list li {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    font-size: 1.05rem;
    line-height: 1.5;
  }

  .icon-check {
    width: 24px;
    height: 24px;
    min-width: 24px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
  }

  .icon-check svg {
    width: 14px;
    height: 14px;
  }

  .card-image {
    opacity: 0;
    max-height: 0;
    overflow: hidden;
    transition: all 0.4s ease;
    border-radius: 12px;
  }

  .toggle-card[data-expanded="true"] .card-image {
    opacity: 1;
    max-height: 300px;
    transition-delay: 0.3s;
  }

  .card-image img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .card-cta {
    margin-top: auto;
  }

  .card-cta .btn-primary {
    background: white;
    color: var(--primary);
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
  }

  .card-cta .btn-primary:hover {
    background: var(--blue-light);
    color: var(--primary);
    gap: 12px;
  }

  .toggle-card[data-section="guests"] .btn-primary {
    color: var(--secondary);
  }

  /* Hover states */
  .toggle-card:not([data-expanded="true"]):hover {
    transform: scale(1.02);
  }

  .toggle-card:not([data-expanded="true"]):hover::before {
    opacity: 0.85;
  }

  /* Mobile */
  @media (max-width: 968px) {
    .toggle-container {
      flex-direction: column;
      padding: 60px 20px;
    }

    .toggle-card {
      min-height: 400px;
    }

    .toggle-card[data-expanded="true"],
    .toggle-card[data-expanded="false"] {
      flex: 1;
    }

    .card-content {
      padding: 32px;
    }

    .card-header h3 {
      font-size: 1.75rem;
    }

    .benefits-list,
    .card-image {
      opacity: 1;
      max-height: none;
    }

    .toggle-card[data-expanded="true"] .card-image {
      max-height: none;
    }

    .card-image img {
      height: 200px;
    }
  }
</style>

<script>
  class ToggleCards {
    private cards: NodeListOf<HTMLElement>;

    constructor() {
      this.cards = document.querySelectorAll('.toggle-card');
      this.init();
    }

    init() {
      // Only enable hover toggle on desktop
      if (window.innerWidth > 968) {
        this.cards.forEach(card => {
          card.addEventListener('mouseenter', () => this.expandCard(card));
        });
      }
    }

    expandCard(hoveredCard: HTMLElement) {
      // Collapse all
      this.cards.forEach(card => {
        card.setAttribute('data-expanded', 'false');
      });

      // Expand hovered
      hoveredCard.setAttribute('data-expanded', 'true');
    }
  }

  // Initialize
  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      new ToggleCards();
    });
  }
</script>